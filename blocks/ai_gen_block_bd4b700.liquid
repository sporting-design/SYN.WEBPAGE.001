<script>
(function() {
  class AmbassadorForm{{ai_gen_id}} extends HTMLElement {
    constructor() {
      super();
    }

    connectedCallback() {
      this.setupConditionalFields();
      this.setupFormValidation();
    }

    setupConditionalFields() {
      const tapeRadios = this.querySelectorAll('input[name="contact[used_tape]"]');
      const conditionalField = this.querySelector('#tape-brands-{{ ai_gen_id }}');

      tapeRadios.forEach(radio => {
        radio.addEventListener('change', () => {
          if (radio.value === 'Yes' && radio.checked) {
            conditionalField.classList.add('visible');
          } else {
            conditionalField.classList.remove('visible');
          }
        });
      });
    }

    setupFormValidation() {
      const form = this.querySelector('form');
      const contentStyleCheckboxes = this.querySelectorAll('input[name="contact[content_style][]"]');

      form.addEventListener('submit', (e) => {
        const checkedContentStyles = Array.from(contentStyleCheckboxes).filter(cb => cb.checked);
        
        if (checkedContentStyles.length === 0) {
          e.preventDefault();
          alert('Please select at least one content style.');
          return false;
        }
      });
    }
  }

  customElements.define('ambassador-form-{{ ai_gen_id }}', AmbassadorForm{{ai_gen_id}});
})();
</script>

