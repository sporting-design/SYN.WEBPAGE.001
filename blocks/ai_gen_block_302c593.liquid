<split-screen-{{ ai_gen_id }} class="ai-split-screen-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-split-screen-container-{{ ai_gen_id }}">
    <div class="ai-split-screen-side-{{ ai_gen_id }} ai-split-screen-left-{{ ai_gen_id }}">
      {% if block.settings.background_image_left %}
        <img
          src="{{ block.settings.background_image_left | image_url: width: 1200 }}"
          alt="{{ block.settings.background_image_left.alt | escape }}"
          class="ai-split-screen-bg-image-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.background_image_left.width }}"
          height="{{ block.settings.background_image_left.height }}"
        >
      {% else %}
        <div class="ai-split-screen-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-split-screen-empty-message-{{ ai_gen_id }}">
            Add left side image
          </div>
        </div>
      {% endif %}

      {% if block.settings.show_overlay_left %}
        <div class="ai-split-screen-overlay-left-{{ ai_gen_id }}"></div>
      {% endif %}

      <div class="ai-split-screen-content-{{ ai_gen_id }}">
        {% if block.settings.heading_left != blank %}
          <h2 class="ai-split-screen-heading-{{ ai_gen_id }}">{{ block.settings.heading_left }}</h2>
        {% endif %}

        {% if block.settings.subheading_left != blank %}
          <div class="ai-split-screen-subheading-{{ ai_gen_id }}">{{ block.settings.subheading_left }}</div>
        {% endif %}

        {% if block.settings.button_text_left != blank %}
          <a
            href="{{ block.settings.button_link_left }}"
            class="ai-split-screen-button-{{ ai_gen_id }}"
          >
            {{ block.settings.button_text_left }}
          </a>
        {% endif %}
      </div>
    </div>

    <div class="ai-split-screen-side-{{ ai_gen_id }} ai-split-screen-right-{{ ai_gen_id }}">
      {% if block.settings.background_image_right %}
        <img
          src="{{ block.settings.background_image_right | image_url: width: 1200 }}"
          alt="{{ block.settings.background_image_right.alt | escape }}"
          class="ai-split-screen-bg-image-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.background_image_right.width }}"
          height="{{ block.settings.background_image_right.height }}"
        >
      {% else %}
        <div class="ai-split-screen-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-split-screen-empty-message-{{ ai_gen_id }}">
            Add right side image
          </div>
        </div>
      {% endif %}

      {% if block.settings.show_overlay_right %}
        <div class="ai-split-screen-overlay-right-{{ ai_gen_id }}"></div>
      {% endif %}

      <div class="ai-split-screen-content-{{ ai_gen_id }}">
        {% if block.settings.heading_right != blank %}
          <h2 class="ai-split-screen-heading-{{ ai_gen_id }}">{{ block.settings.heading_right }}</h2>
        {% endif %}

        {% if block.settings.subheading_right != blank %}
          <div class="ai-split-screen-subheading-{{ ai_gen_id }}">{{ block.settings.subheading_right }}</div>
        {% endif %}

        {% if block.settings.button_text_right != blank %}
          <a
            href="{{ block.settings.button_link_right }}"
            class="ai-split-screen-button-{{ ai_gen_id }}"
          >
            {{ block.settings.button_text_right }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</split-screen-{{ ai_gen_id }}>

<script>
  (function() {
    class SplitScreen{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
      }
    }

    customElements.define('split-screen-{{ ai_gen_id }}', SplitScreen{{ ai_gen_id }});
  })();
</script>

