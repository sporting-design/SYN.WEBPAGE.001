    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    background-color: {{ block.settings.placeholder_bg_color }};
  }

  .ai-split-screen-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
    opacity: 0.3;
  }

  .ai-split-screen-empty-message-{{ ai_gen_id }} {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    color: #666;
    font-size: 14px;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-split-screen-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      min-height: auto;
    }

    .ai-split-screen-side-{{ ai_gen_id }} {
      min-height: {{ block.settings.mobile_min_height }}px;
    }

