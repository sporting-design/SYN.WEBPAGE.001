      justify-content: flex-end;
      text-align: left;
    {% elsif block.settings.content_position_right == 'bottom-center' %}
      align-items: center;
      justify-content: flex-end;
      text-align: center;
    {% elsif block.settings.content_position_right == 'bottom-right' %}
