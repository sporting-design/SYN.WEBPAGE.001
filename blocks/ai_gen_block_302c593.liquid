    font-size: {{ block.settings.button_font_size_right }}px;
    background-color: {{ block.settings.button_bg_color_right }};
    color: {{ block.settings.button_text_color_right }};
    border: {{ block.settings.button_border_width_right }}px solid {{ block.settings.button_border_color_right }};
  }

