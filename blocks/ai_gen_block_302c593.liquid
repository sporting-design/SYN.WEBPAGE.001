    font-size: {{ block.settings.button_font_size_left }}px;
    background-color: {{ block.settings.button_bg_color_left }};
    color: {{ block.settings.button_text_color_left }};
    border: {{ block.settings.button_border_width_left }}px solid {{ block.settings.button_border_color_left }};
  }

