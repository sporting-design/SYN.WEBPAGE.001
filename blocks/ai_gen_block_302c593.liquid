{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-split-screen-{{ ai_gen_id }} {
    display: block;
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    min-height: {{ block.settings.min_height }}px;
  }

  .ai-split-screen-container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    width: 100%;
    min-height: {{ block.settings.min_height }}px;
  }

  .ai-split-screen-side-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    display: flex;
    background-color: #f4f4f4;
  }

  .ai-split-screen-bg-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .ai-split-screen-overlay-left-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color_left }};
    opacity: {{ block.settings.overlay_opacity_left | divided_by: 100.0 }};
    z-index: 2;
  }

  .ai-split-screen-overlay-right-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color_right }};
    opacity: {{ block.settings.overlay_opacity_right | divided_by: 100.0 }};
    z-index: 2;
  }

  .ai-split-screen-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    padding: 40px;
    max-width: 600px;
    width: 100%;
    display: flex;
    flex-direction: column;
  }

  .ai-split-screen-left-{{ ai_gen_id }} .ai-split-screen-content-{{ ai_gen_id }} {
    {% if block.settings.content_position_left == 'top-left' %}
      align-items: flex-start;
      justify-content: flex-start;
      text-align: left;
    {% elsif block.settings.content_position_left == 'top-center' %}
      align-items: center;
      justify-content: flex-start;
      text-align: center;
    {% elsif block.settings.content_position_left == 'top-right' %}
      align-items: flex-end;
      justify-content: flex-start;
      text-align: right;
    {% elsif block.settings.content_position_left == 'center-left' %}
      align-items: flex-start;
      justify-content: center;
      text-align: left;
    {% elsif block.settings.content_position_left == 'center-center' %}
      align-items: center;
      justify-content: center;
      text-align: center;
    {% elsif block.settings.content_position_left == 'center-right' %}
      align-items: flex-end;
      justify-content: center;
      text-align: right;
    {% elsif block.settings.content_position_left == 'bottom-left' %}
      align-items: flex-start;
      justify-content: flex-end;
      text-align: left;
    {% elsif block.settings.content_position_left == 'bottom-center' %}
      align-items: center;
      justify-content: flex-end;
      text-align: center;
    {% elsif block.settings.content_position_left == 'bottom-right' %}
      align-items: flex-end;
      justify-content: flex-end;
      text-align: right;
    {% endif %}
  }

  .ai-split-screen-right-{{ ai_gen_id }} .ai-split-screen-content-{{ ai_gen_id }} {
    {% if block.settings.content_position_right == 'top-left' %}
      align-items: flex-start;
      justify-content: flex-start;
      text-align: left;
    {% elsif block.settings.content_position_right == 'top-center' %}
      align-items: center;
      justify-content: flex-start;
      text-align: center;
    {% elsif block.settings.content_position_right == 'top-right' %}
      align-items: flex-end;
      justify-content: flex-start;
      text-align: right;
    {% elsif block.settings.content_position_right == 'center-left' %}
      align-items: flex-start;
      justify-content: center;
      text-align: left;
    {% elsif block.settings.content_position_right == 'center-center' %}
