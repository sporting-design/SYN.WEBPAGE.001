            {{ 'image' | placeholder_svg_tag }}
            <div class="ai-three-column-empty-state-{{ ai_gen_id }}">Add icon</div>
          </div>
        {% endif %}
        
        {% if block.settings.title_2 != blank %}
          <h3 class="ai-three-column-title-{{ ai_gen_id }}">{{ block.settings.title_2 }}</h3>
        {% endif %}
        
        {% if block.settings.copy_2 != blank %}
          <div class="ai-three-column-copy-{{ ai_gen_id }}">{{ block.settings.copy_2 }}</div>
        {% endif %}
      </div>

      <div class="ai-three-column-item-{{ ai_gen_id }}">
        {% if block.settings.icon_3 %}
          <img
            src="{{ block.settings.icon_3 | image_url: width: 200 }}"
            alt="{{ block.settings.icon_3.alt | escape }}"
            class="ai-three-column-icon-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ block.settings.icon_size }}"
            height="{{ block.settings.icon_size }}"
          >
        {% else %}
          <div class="ai-three-column-icon-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
            <div class="ai-three-column-empty-state-{{ ai_gen_id }}">Add icon</div>
          </div>
        {% endif %}
        
        {% if block.settings.title_3 != blank %}
          <h3 class="ai-three-column-title-{{ ai_gen_id }}">{{ block.settings.title_3 }}</h3>
        {% endif %}
        
        {% if block.settings.copy_3 != blank %}
          <div class="ai-three-column-copy-{{ ai_gen_id }}">{{ block.settings.copy_3 }}</div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

