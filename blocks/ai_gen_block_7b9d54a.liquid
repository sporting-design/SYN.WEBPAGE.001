{% doc %}
  @prompt
    Create a conditional display block for a brand ambassador section that only shows on a specific page or tab called "ambassador team" and hides on all other pages including the home page. The block should check the current page or URL to determine visibility.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% liquid
  assign show_block = false
  assign current_page_handle = page.handle | default: ''
  assign current_template = template.name | default: ''
  if block.settings.visibility_type == 'page_handle'
    if current_page_handle == block.settings.target_page_handle
      assign show_block = true
    endif
  elsif block.settings.visibility_type == 'url_contains'
    if request.path contains block.settings.url_keyword
      assign show_block = true
    endif
  elsif block.settings.visibility_type == 'template'
    if current_template == block.settings.target_template
      assign show_block = true
    endif
  endif
%}

{% if show_block %}
  {% style %}
    .ai-ambassador-section-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding }}px 20px;
      background-color: {{ block.settings.background_color }};
      text-align: {{ block.settings.text_alignment }};
    }

    .ai-ambassador-container-{{ ai_gen_id }} {
      max-width: {{ block.settings.max_width }}px;
      margin: 0 auto;
    }

    .ai-ambassador-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size }}px;
      color: {{ block.settings.heading_color }};
      margin: 0 0 {{ block.settings.heading_margin }}px 0;
      font-weight: 600;
    }

    .ai-ambassador-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size }}px;
      color: {{ block.settings.text_color }};
      margin: 0 0 {{ block.settings.content_spacing }}px 0;
      line-height: 1.6;
    }

    .ai-ambassador-grid-{{ ai_gen_id }} {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax({{ block.settings.card_min_width }}px, 1fr));
      gap: {{ block.settings.grid_gap }}px;
      margin-top: {{ block.settings.content_spacing }}px;
    }

    .ai-ambassador-card-{{ ai_gen_id }} {
      background-color: {{ block.settings.card_background }};
      border-radius: {{ block.settings.card_border_radius }}px;
      padding: {{ block.settings.card_padding }}px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease;
    }

    .ai-ambassador-card-{{ ai_gen_id }}:hover {
      transform: translateY(-2px);
    }

    .ai-ambassador-image-wrapper-{{ ai_gen_id }} {
      width: {{ block.settings.image_size }}px;
      height: {{ block.settings.image_size }}px;
      margin: 0 auto {{ block.settings.image_margin }}px;
      border-radius: 50%;
      overflow: hidden;
      background-color: #f4f4f4;
    }

    .ai-ambassador-image-{{ ai_gen_id }} {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .ai-ambassador-image-placeholder-{{ ai_gen_id }} {
      width:100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;}

    .ai-ambassador-image-placeholder-{{ ai_gen_id }} svg {
      width: 60%;
      height: 60%;
      opacity: 0.3;
    }

    .ai-ambassador-name-{{ ai_gen_id }} {
      font-size: {{ block.settings.name_size }}px;
      color: {{ block.settings.name_color }};
      font-weight: 600;
      margin: 0 0 8px 0;
    }

    .ai-ambassador-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size }}px;
      color: {{ block.settings.title_color }};
      margin: 0 0 12px 0;
      font-style: italic;
    }

    .ai-ambassador-bio-{{ ai_gen_id }} {
      font-size: {{ block.settings.bio_size }}px;
      color: {{ block.settings.bio_color }};
      line-height: 1.5;
      margin: 0;
    }

    .ai-ambassador-empty-state-{{ ai_gen_id }} {
      text-align: center;
      padding: 40px 20px;
      color: #666;
      font-style: italic;
    }

    @media screen and (max-width: 768px) {
      .ai-ambassador-grid-{{ ai_gen_id }} {
        grid-template-columns: 1fr;
      }
      
      .ai-ambassador-heading-{{ ai_gen_id }} {
        font-size: calc({{ block.settings.heading_size }}px * 0.8);
      }}
  {% endstyle %}

  <div class="ai-ambassador-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
    <div class="ai-ambassador-container-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-ambassador-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}

      {% if block.settings.description != blank %}
        <div class="ai-ambassador-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
      {% endif %}

      <div class="ai-ambassador-grid-{{ ai_gen_id }}">
        {% for i in (1..6) %}
          {% liquid
            assign name_key = 'ambassador_' | append: i | append: '_name'
            assign title_key = 'ambassador_' | append: i | append: '_title'
            assign bio_key = 'ambassador_' | append: i | append: '_bio'
            assign image_key = 'ambassador_' | append: i | append: '_image'
            
            assign ambassador_name = block.settings[name_key]
            assign ambassador_title = block.settings[title_key]
            assign ambassador_bio = block.settings[bio_key]
            assign ambassador_image = block.settings[image_key]%}

          {% if ambassador_name != blank or ambassador_title != blank or ambassador_bio != blank or ambassador_image != blank %}
            <div class="ai-ambassador-card-{{ ai_gen_id }}">
              <div class="ai-ambassador-image-wrapper-{{ ai_gen_id }}">
                {% if ambassador_image %}
                  <img
                    src="{{ ambassador_image | image_url: width: 300}}"
                    alt="{{ ambassador_name | escape }}"
                    class="ai-ambassador-image-{{ ai_gen_id }}"
                    loading="lazy"
                width="300"
                    height="300"
                  >
                {% else %}
                  <div class="ai-ambassador-image-placeholder-{{ ai_gen_id }}">
                    {{ 'image' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>

              {% if ambassador_name != blank %}
                <h3 class="ai-ambassador-name-{{ ai_gen_id }}">{{ ambassador_name }}</h3>
              {% endif %}

              {% if ambassador_title != blank %}
                <div class="ai-ambassador-title-{{ ai_gen_id }}">{{ ambassador_title }}</div>
              {% endif %}

              {% if ambassador_bio != blank %}
                <div class="ai-ambassador-bio-{{ ai_gen_id }}">{{ ambassador_bio }}</div>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}

        {% liquid
          assign has_ambassadors = false
          for i in (1..6)
            assign name_key = 'ambassador_' | append: i | append: '_name'
            assign title_key = 'ambassador_' | append: i | append: '_title'
            assign bio_key = 'ambassador_' | append: i | append: '_bio'
            assign image_key = 'ambassador_' | append: i | append: '_image'
            
            if block.settings[name_key] != blank or block.settings[title_key] != blank or block.settings[bio_key] != blank or block.settings[image_key] != blank
              assign has_ambassadors = true
              break
            endif
          endfor
        %}

        {% unless has_ambassadors %}
          <div class="ai-ambassador-empty-state-{{ ai_gen_id }}">
            Add ambassador information to display your team
          </div>
        {% endunless %}
      </div>
    </div>
  </div>
{% endif %}

