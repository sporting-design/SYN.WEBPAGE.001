{% doc %}
  @prompt
    generate the ambassador sign up forum as i requested earlier but limit the section to only be shown under the ambassador team link of the website - https://synapex.store/pages/ambassador-team -

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% comment %} Only show this block on the ambassador team page {% endcomment %}
{% unless request.page_type == 'page' and page.handle == 'ambassador-team' %}
  {% break %}
{% endunless %}

{% style %}
  .ai-ambassador-signup-{{ ai_gen_id }} {
    max-width: 800px;
    margin: 0 auto;
    padding: {{ block.settings.section_padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .ai-ambassador-signup__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 32px;
  }

  .ai-ambassador-signup__title-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 16px;
    font-weight: 600;
  }

  .ai-ambassador-signup__description-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
    margin: 0;
  }

  .ai-ambassador-signup__form-{{ ai_gen_id }} {
    display: grid;
    gap: 24px;}

  .ai-ambassador-signup__form-row-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns:1fr 1fr;
    gap: 16px;
  }

  .ai-ambassador-signup__form-group-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;gap: 8px;
  }

  .ai-ambassador-signup__form-group--full-{{ ai_gen_id }} {
    grid-column: 1 / -1;
  }

  .ai-ambassador-signup__label-{{ ai_gen_id }} {
    color: {{ block.settings.label_color }};
    font-size: 14px;
    font-weight: 500;
  }

  .ai-ambassador-signup__input-{{ ai_gen_id }},
  .ai-ambassador-signup__textarea-{{ ai_gen_id }},
  .ai-ambassador-signup__select-{{ ai_gen_id }} {
    padding: 12px 16px;
    border: 2px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    background-color: {{ block.settings.input_background_color }};
    color: {{ block.settings.input_text_color }};
    font-size: 16px;
    transition: border-color 0.3s ease;
  }

  .ai-ambassador-signup__input-{{ ai_gen_id }}:focus,
  .ai-ambassador-signup__textarea-{{ ai_gen_id }}:focus,
  .ai-ambassador-signup__select-{{ ai_gen_id }}:focus {
    outline: none;
    border-color: {{ block.settings.input_focus_color }};
  }

  .ai-ambassador-signup__textarea-{{ ai_gen_id }} {
    min-height: 120px;
    resize: vertical;
  }

  .ai-ambassador-signup__checkbox-group-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    margin-top: 8px;
  }

  .ai-ambassador-signup__checkbox-{{ ai_gen_id }} {
    margin-top: 4px;
    flex-shrink: 0;
  }

  .ai-ambassador-signup__checkbox-label-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: 14px;
    line-height: 1.5;
  }

  .ai-ambassador-signup__submit-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    padding: 16px 32px;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s ease;
    justify-self: center;
    min-width: 200px;
  }

  .ai-ambassador-signup__submit-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-ambassador-signup__success-{{ ai_gen_id }} {
    background-color: {{ block.settings.success_bg_color }};
    color: {{ block.settings.success_text_color }};
    padding: 16px;
    border-radius: {{ block.settings.input_border_radius }}px;
    text-align: center;
    margin-top: 16px;
  }

  .ai-ambassador-signup__error-{{ ai_gen_id }} {
    background-color: {{ block.settings.error_bg_color }};
    color: {{ block.settings.error_text_color }};
    padding: 16px;
    border-radius: {{ block.settings.input_border_radius }}px;
    margin-top: 8px;
  }

  @media screen and (max-width: 768px) {
    .ai-ambassador-signup__form-row-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-ambassador-signup-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.75}}px;
    }

    .ai-ambassador-signup__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.85 }}px;
    }
  }
{% endstyle %}

<div class="ai-ambassador-signup-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-ambassador-signup__header-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-ambassador-signup__title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}
    {% if block.settings.description != blank %}
      <div class="ai-ambassador-signup__description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
    {% endif %}
  </div>

  {% form 'contact' %}
    <input type="hidden" name="contact[tags]" value="ambassador-application">
    
    <div class="ai-ambassador-signup__form-{{ ai_gen_id }}">
      <div class="ai-ambassador-signup__form-row-{{ ai_gen_id }}">
        <div class="ai-ambassador-signup__form-group-{{ ai_gen_id }}">
          <label class="ai-ambassador-signup__label-{{ ai_gen_id }}" for="ambassador-first-name-{{ ai_gen_id }}">
            First name *
          </label>
          <input
            type="text"
            id="ambassador-first-name-{{ ai_gen_id }}"
            name="contact[first_name]"
            class="ai-ambassador-signup__input-{{ ai_gen_id }}"
            value="{{ form.first_name }}"
            required
          >
        </div>
        <div class="ai-ambassador-signup__form-group-{{ ai_gen_id }}">
          <label class="ai-ambassador-signup__label-{{ ai_gen_id }}" for="ambassador-last-name-{{ ai_gen_id }}">
            Last name *
          </label>
          <input
            type="text"
            id="ambassador-last-name-{{ ai_gen_id }}"
            name="contact[last_name]"
            class="ai-ambassador-signup__input-{{ ai_gen_id }}"
            value="{{ form.last_name }}"
            required
          >
        </div>
      </div>

      <div class="ai-ambassador-signup__form-row-{{ ai_gen_id }}">
        <div class="ai-ambassador-signup__form-group-{{ ai_gen_id }}">
          <label class="ai-ambassador-signup__label-{{ ai_gen_id }}" for="ambassador-email-{{ ai_gen_id }}">
            Email address *
          </label>
          <input
            type="email"
            id="ambassador-email-{{ ai_gen_id }}"
            name="contact[email]"
            class="ai-ambassador-signup__input-{{ ai_gen_id }}"
            value="{{ form.email }}"
            autocomplete="email"
            required
            {% if form.errors %}
              aria-invalid="true"
              aria-describedby="ambassador-email-error-{{ ai_gen_id }}"
            {% endif %}
          >
          {% if form.errors.email %}
            <div id="ambassador-email-error-{{ ai_gen_id }}" class="ai-ambassador-signup__error-{{ ai_gen_id }}">
              {{ form.errors.messages.email }}
            </div>
          {% endif %}
        </div>
        
        <div class="ai-ambassador-signup__form-group-{{ ai_gen_id }}">
          <label class="ai-ambassador-signup__label-{{ ai_gen_id }}" for="ambassador-phone-{{ ai_gen_id }}">
            Phone number
          </label>
          <input
            type="tel"
            id="ambassador-phone-{{ ai_gen_id }}"
            name="contact[phone]"
            class="ai-ambassador-signup__input-{{ ai_gen_id }}"
            value="{{ form.phone }}"
            autocomplete="tel">
        </div>
      </div>

      <div class="ai-ambassador-signup__form-group-{{ ai_gen_id }} ai-ambassador-signup__form-group--full-{{ ai_gen_id }}">
        <label class="ai-ambassador-signup__label-{{ ai_gen_id }}" for="ambassador-social-media-{{ ai_gen_id }}">
          Social media handles
        </label>
        <textarea
          id="ambassador-social-media-{{ ai_gen_id }}"
          name="contact[social_media]"
          class="ai-ambassador-signup__textarea-{{ ai_gen_id }}"
          placeholder="Instagram: @username, TikTok: @username, YouTube: channel name, etc."
        >{{ form.social_media }}</textarea>
      </div>

      <div class="ai-ambassador-signup__form-group-{{ ai_gen_id }} ai-ambassador-signup__form-group--full-{{ ai_gen_id }}">
        <label class="ai-ambassador-signup__label-{{ ai_gen_id }}" for="ambassador-audience-{{ ai_gen_id }}">
          Tell us about your audience
        </label>
        <textarea
          id="ambassador-audience-{{ ai_gen_id }}"
          name="contact[audience_description]"
          class="ai-ambassador-signup__textarea-{{ ai_gen_id }}"
          placeholder="Describe your followers, engagement rates, content style, etc."
        >{{ form.audience_description }}</textarea>
      </div>

      <div class="ai-ambassador-signup__form-group-{{ ai_gen_id }} ai-ambassador-signup__form-group--full-{{ ai_gen_id }}">
        <label class="ai-ambassador-signup__label-{{ ai_gen_id }}" for="ambassador-motivation-{{ ai_gen_id }}">
          Why do you want to become a Synapex ambassador? *
        </label>
        <textarea
          id="ambassador-motivation-{{ ai_gen_id }}"
          name="contact[motivation]"
          class="ai-ambassador-signup__textarea-{{ ai_gen_id }}"
          placeholder="Tell us what interests you about our brand and products..."required
        >{{ form.motivation }}</textarea>
      </div>

      <div class="ai-ambassador-signup__form-group-{{ ai_gen_id }} ai-ambassador-signup__form-group--full-{{ ai_gen_id }}">
        <div class="ai-ambassador-signup__checkbox-group-{{ ai_gen_id }}">
          <input
            type="checkbox"
            id="ambassador-terms-{{ ai_gen_id }}"
            name="contact[terms_accepted]"
            class="ai-ambassador-signup__checkbox-{{ ai_gen_id }}"
            value="yes"
            required>
          <label class="ai-ambassador-signup__checkbox-label-{{ ai_gen_id }}" for="ambassador-terms-{{ ai_gen_id }}">
            I agree to the terms and conditions and understand that this application will be reviewed by the Synapex team. *
          </label>
        </div>
      </div>

      <button type="submit" class="ai-ambassador-signup__submit-{{ ai_gen_id }}">
        {{ block.settings.submit_text }}
      </button>

      {% if form.posted_successfully? %}
        <div class="ai-ambassador-signup__success-{{ ai_gen_id }}">
          {{ block.settings.success_message }}
        </div>
      {% endif %}
    </div>
  {% endform %}
</div>

