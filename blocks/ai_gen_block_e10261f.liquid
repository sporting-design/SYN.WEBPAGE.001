{% doc %}
  @prompt
    create a sector with an insert for an image on the left side with a 500 char text box to the right, and a button at the button 'Read Full Story' , two changes allow for up 1000 char in the textbox, make the background color of the sector black, also change the 'read full story' button style to link stylw
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-story-block-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 24px;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    max-width: 100%;
  }

  .ai-story-content-{{ ai_gen_id }} {
    display: flex;
    gap: 24px;
    align-items: flex-start;
  }

  .ai-story-image-wrapper-{{ ai_gen_id }} {
    flex: 0 0 {{ block.settings.image_width }}%;
    position: relative;
  }

  .ai-story-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    border-radius: {{ block.settings.image_border_radius }}px;
    object-fit: cover;
  }

  .ai-story-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 4/3;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-story-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-story-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 16px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-story-text-wrapper-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .ai-story-title-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    font-family: {{ block.settings.title_font.family }}, {{ block.settings.title_font.fallback_families }};
    font-weight: {{ block.settings.title_font.weight }};
    line-height: 1.2;
  }

  .ai-story-text-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.5;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: {{ block.settings.text_lines }};
    -webkit-box-orient: vertical;
  }

  .ai-story-button-wrapper-{{ ai_gen_id }} {
    display: flex;
    justify-content: {{ block.settings.button_alignment }};
  }

  .ai-story-button-{{ ai_gen_id }} {
    color: {{ block.settings.button_text_color }};
    text-decoration: underline;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 500;
    transition: all 0.3s ease;
    cursor: pointer;
    background: none;
    border: none;
    padding: 0;
  }

  .ai-story-button-{{ ai_gen_id }}:hover {
    color: {{ block.settings.button_hover_text_color }};
    text-decoration: none;
  }

  @media screen and (max-width: 768px) {
    .ai-story-content-{{ ai_gen_id }} {
      flex-direction: column;
      gap: 16px;
    }

    .ai-story-image-wrapper-{{ ai_gen_id }} {
      flex: none;
      width: 100%;
    }

    .ai-story-block-{{ ai_gen_id }} {
      padding: {{ block.settings.padding | times: 0.75 }}px;
    }
  }
{% endstyle %}

<div class="ai-story-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-story-content-{{ ai_gen_id }}">
    <div class="ai-story-image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.image %}
        <img
          src="{{ block.settings.image | image_url: width: 800 }}"
          alt="{{ block.settings.image.alt | escape }}"
          class="ai-story-image-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
        >
      {% else %}
        <div class="ai-story-image-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-story-empty-state-{{ ai_gen_id }}">
            Add an image
          </div>
        </div>
      {% endif %}
    </div>

    <div class="ai-story-text-wrapper-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <h3 class="ai-story-title-{{ ai_gen_id }}">{{ block.settings.title }}</h3>
      {% endif %}

      {% if block.settings.text != blank %}
        <p class="ai-story-text-{{ ai_gen_id }}">{{ block.settings.text }}</p>
      {% endif %}
    </div>
  </div>

  {% if block.settings.button_text != blank and block.settings.button_link != blank %}
    <div class="ai-story-button-wrapper-{{ ai_gen_id }}">
      <a href="{{ block.settings.button_link }}" class="ai-story-button-{{ ai_gen_id }}">
        {{ block.settings.button_text }}
      </a>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Story block",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "range",
      "id": "image_width",
      "min": 30,
      "max": 60,
      "step": 5,
      "unit": "%",
      "label": "Image width",
      "default": 40
    },
    {
      "type": "range",
      "id": "image_border_radius",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Image border radius",
      "default": 8
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Your Story Title"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text (up to 1000 characters)",
      "default": "Share your compelling story here. This text area supports up to 1000 characters, perfect for engaging your audience with a captivating preview of your full story. Make every word count to draw readers in and encourage them to learn more about what you have to offer."
    },
    {
      "type": "range",
      "id": "text_lines",
      "min": 2,
      "max": 8,
      "step": 1,
      "label": "Maximum text lines",
      "default": 4
    },
    {
      "type": "header",
      "content": "Link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Link text",
      "default": "Read Full Story"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Link URL"
    },
    {
      "type": "select",
      "id": "button_alignment",
      "label": "Link alignment",
      "options": [
        {
          "value": "flex-start",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "flex-end",
          "label": "Right"
        }
      ],
      "default": "flex-start"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "font_picker",
      "id": "title_font",
      "label": "Title font",
      "default": "barlow_condensed_n6"
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 16,
      "max": 48,
      "step": 2,
      "unit": "px",
      "label": "Title size",
      "default": 24
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Text size",
      "default": 14
    },
    {
      "type": "range",
      "id": "button_text_size",
      "min": 12,
      "max": 18,
      "step": 1,
      "unit": "px",
      "label": "Link text size",
      "default": 14
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Link color",
      "default": "#2563eb"
    },
    {
      "type": "color",
      "id": "button_hover_text_color",
      "label": "Link hover color",
      "default": "#3b82f6"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "padding",
      "min": 16,
      "max": 64,
      "step": 4,
      "unit": "px",
      "label": "Block padding",
      "default": 32
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 24,
      "step": 2,
      "unit": "px",
      "label": "Block border radius",
      "default": 8
    }
  ],
  "presets": [
    {
      "name": "Story block"
    }
  ]
}
{% endschema %}