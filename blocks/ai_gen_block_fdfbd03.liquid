{% doc %}
  @prompt
    a frame to upload a horizontal full div image
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-frame-{{ ai_gen_id }} {
    width: 100%;
    position: relative;
    overflow: hidden;
  }

  .ai-image-frame__wrapper-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.frame_height }}px;
    position: relative;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
  }

  .ai-image-frame__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: {{ block.settings.image_fit }};
    object-position: {{ block.settings.image_position }};
  }

  .ai-image-frame__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.background_color }};
    position: relative;
  }

  .ai-image-frame__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
    opacity: 0.3;
  }

  .ai-image-frame__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-image-frame__wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.mobile_frame_height }}px;
    }
  }
{% endstyle %}

<div class="ai-image-frame-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-image-frame__wrapper-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 2000 }}"
        alt="{{ block.settings.image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
        class="ai-image-frame__image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-image-frame__placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-image-frame__empty-state-{{ ai_gen_id }}">
          Add a horizontal image
        </div>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Image frame",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_fit",
      "label": "Image fit",
      "options": [
        {
          "value": "cover",
          "label": "Cover"
        },
        {
          "value": "contain",
          "label": "Contain"
        },
        {
          "value": "fill",
          "label": "Fill"
        }
      ],
      "default": "cover"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image position",
      "options": [
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        },
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Frame style"
    },
    {
      "type": "range",
      "id": "frame_height",
      "min": 200,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Desktop height",
      "default": 400
    },
    {
      "type": "range",
      "id": "mobile_frame_height",
      "min": 150,
      "max": 600,
      "step": 50,
      "unit": "px",
      "label": "Mobile height",
      "default": 300
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 0
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#f4f4f4"
    }
  ],
  "presets": [
    {
      "name": "Image frame"
    }
  ]
}
{% endschema %}
