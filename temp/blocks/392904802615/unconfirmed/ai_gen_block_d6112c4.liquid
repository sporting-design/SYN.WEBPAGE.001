{% doc %}
  @prompt
    image with text frame
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-text-frame-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    position: relative;
  }

  .ai-image-text-frame__container-{{ ai_gen_id }} {
    position: relative;
    width: {{ block.settings.desktop_width_percent }}%;
    margin: 0 auto;
  }

  .ai-image-text-frame__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .ai-image-text-frame__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-image-text-frame__placeholder-{{ ai_gen_id }} {
    width: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    min-height: 400px;
  }

  .ai-image-text-frame__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-image-text-frame__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-image-text-frame__frame-{{ ai_gen_id }} {
    position: absolute;
    top: {{ block.settings.frame_offset_top }}%;
    left: {{ block.settings.frame_offset_left }}%;
    right: {{ block.settings.frame_offset_right }}%;
    bottom: {{ block.settings.frame_offset_bottom }}%;
    border: {{ block.settings.frame_width }}px {{ block.settings.frame_style }} {{ block.settings.frame_color }};
    pointer-events: none;
  }

  .ai-image-text-frame__text-overlay-{{ ai_gen_id }} {
    position: absolute;
    {% if block.settings.text_position == 'top-left' %}
      top: {{ block.settings.text_offset_vertical }}%;
      left: {{ block.settings.text_offset_horizontal }}%;
    {% elsif block.settings.text_position == 'top-center' %}
      top: {{ block.settings.text_offset_vertical }}%;
      left: 50%;
      transform: translateX(-50%);
    {% elsif block.settings.text_position == 'top-right' %}
      top: {{ block.settings.text_offset_vertical }}%;
      right: {{ block.settings.text_offset_horizontal }}%;
    {% elsif block.settings.text_position == 'center-left' %}
      top: 50%;
      left: {{ block.settings.text_offset_horizontal }}%;
      transform: translateY(-50%);
    {% elsif block.settings.text_position == 'center' %}
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    {% elsif block.settings.text_position == 'center-right' %}
      top: 50%;
      right: {{ block.settings.text_offset_horizontal }}%;
      transform: translateY(-50%);
    {% elsif block.settings.text_position == 'bottom-left' %}
      bottom: {{ block.settings.text_offset_vertical }}%;
      left: {{ block.settings.text_offset_horizontal }}%;
    {% elsif block.settings.text_position == 'bottom-center' %}
      bottom: {{ block.settings.text_offset_vertical }}%;
      left: 50%;
      transform: translateX(-50%);
    {% elsif block.settings.text_position == 'bottom-right' %}
      bottom: {{ block.settings.text_offset_vertical }}%;
      right: {{ block.settings.text_offset_horizontal }}%;
    {% endif %}
    max-width: {{ block.settings.text_max_width }}%;
    padding: {{ block.settings.text_padding }}px;
    background-color: {{ block.settings.text_background_color }};
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-image-text-frame__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 {{ block.settings.heading_spacing }}px 0;
    text-transform: {{ block.settings.heading_transform }};
  }

  .ai-image-text-frame__text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-image-text-frame__container-{{ ai_gen_id }} {
      width: 100%;
    }

    .ai-image-text-frame__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-image-text-frame__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

    .ai-image-text-frame__text-overlay-{{ ai_gen_id }} {
      max-width: 90%;
      padding: {{ block.settings.text_padding | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div class="ai-image-text-frame-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-image-text-frame__container-{{ ai_gen_id }}">
    <div class="ai-image-text-frame__image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.image %}
        <img
          src="{{ block.settings.image | image_url: width: 2000 }}"
          alt="{{ block.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
          class="ai-image-text-frame__image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-image-text-frame__placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-image-text-frame__empty-state-{{ ai_gen_id }}">
            Next, add an image
          </div>
        </div>
      {% endif %}

      <div class="ai-image-text-frame__frame-{{ ai_gen_id }}"></div>

      {% if block.settings.heading != blank or block.settings.text != blank %}
        <div class="ai-image-text-frame__text-overlay-{{ ai_gen_id }}">
          {% if block.settings.heading != blank %}
            <h2 class="ai-image-text-frame__heading-{{ ai_gen_id }}">
              {{ block.settings.heading }}
            </h2>
          {% endif %}
          {% if block.settings.text != blank %}
            <div class="ai-image-text-frame__text-{{ ai_gen_id }}">
              {{ block.settings.text }}
            </div>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

