{% doc %}
  @prompt
    creating a landing page div where i can upload a 16:9 video and put a heading, subheading and cta button. i should be able to control placement of all text and button to each quadrant 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-video-hero-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
  }

  .ai-video-hero__video-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%;
    overflow: hidden;
  }

  .ai-video-hero__video-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-video-hero__video-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-video-hero__video-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-video-hero__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-video-hero__content-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    padding: 40px;
    z-index: 2;
  }

  .ai-video-hero__content-inner-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.content_spacing }}px;
    max-width: {{ block.settings.content_max_width }}px;
    width: 100%;
  }

  .ai-video-hero__content-{{ ai_gen_id }}--top-left .ai-video-hero__content-inner-{{ ai_gen_id }} {
    align-items: flex-start;
    justify-content: flex-start;
    text-align: left;
  }

  .ai-video-hero__content-{{ ai_gen_id }}--top-right .ai-video-hero__content-inner-{{ ai_gen_id }} {
    align-items: flex-end;
    justify-content: flex-start;
    text-align: right;
    margin-left: auto;
  }

  .ai-video-hero__content-{{ ai_gen_id }}--bottom-left .ai-video-hero__content-inner-{{ ai_gen_id }} {
    align-items: flex-start;
    justify-content: flex-end;
    text-align: left;
  }

  .ai-video-hero__content-{{ ai_gen_id }}--bottom-right .ai-video-hero__content-inner-{{ ai_gen_id }} {
    align-items: flex-end;
    justify-content: flex-end;
    text-align: right;
    margin-left: auto;
  }

  .ai-video-hero__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0;
    line-height: 1.2;
  }

  .ai-video-hero__subheading-{{ ai_gen_id }} {
    color: {{ block.settings.subheading_color }};
    font-size: {{ block.settings.subheading_size }}px;
    margin: 0;
    line-height: 1.4;
  }

  .ai-video-hero__button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .ai-video-hero__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-video-hero__content-{{ ai_gen_id }} {
      padding: 20px;
    }

    .ai-video-hero__heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.7);
    }

    .ai-video-hero__subheading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subheading_size }}px * 0.8);
    }

    .ai-video-hero__content-inner-{{ ai_gen_id }} {
      max-width: 100%;
    }
  }
{% endstyle %}

<div class="ai-video-hero-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-video-hero__video-wrapper-{{ ai_gen_id }}">
    {% if block.settings.video %}
      <video
        class="ai-video-hero__video-{{ ai_gen_id }}"
        autoplay
        muted
        loop
        playsinline
      >
        <source src="{{ block.settings.video }}" type="video/mp4">
      </video>
    {% else %}
      <div class="ai-video-hero__video-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
        <div class="ai-video-hero__empty-state-{{ ai_gen_id }}">
          Next, add a video
        </div>
      </div>
    {% endif %}
  </div>

  <div class="ai-video-hero__content-{{ ai_gen_id }} ai-video-hero__content-{{ ai_gen_id }}--{{ block.settings.content_position }}">
    <div class="ai-video-hero__content-inner-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-video-hero__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}

      {% if block.settings.subheading != blank %}
        <p class="ai-video-hero__subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
      {% endif %}

      {% if block.settings.button_text != blank %}
        <a
          href="{{ block.settings.button_link }}"
          class="ai-video-hero__button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

