{% doc %}
  @prompt
    Create a full-width hero banner section with a 16:9 aspect ratio background image container. The banner should have:
    
    1. A dark overlay (rgba(0,0,0,0.7)) on top of the background image
    2. Centered text content including:
       - Small eyebrow text: "SYNAPEX CLINICAL DIVISION"
       - Large headline: "WELCOME TO THE PARTNER NETWORK"
       - Subheadline: "Factory-Direct Pricing. German Engineering. Zero Compromise."
       - Technical specs in a grid below (3 columns):
         * "165 GSM DENSITY" - "20% Denser Than Standard"
         * "5-DAY HOLD" - "German Henkel® Adhesive"
         * "$7.50/ROLL" - "Wholesale Partner Pricing"
    
    3. Style: Brutalist, high-contrast, black background with beige (#E3DAC9) accent text
    4. Make it responsive - stack on mobile
    5. Include options to:
       - Upload custom background image
       - Edit all text fields
       - Adjust overlay opacity
    6. Section should be named "B2B Hero Banner"
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-b2b-hero-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .ai-b2b-hero-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%;
    background-color: #000000;
  }

  .ai-b2b-hero-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-b2b-hero-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #000000;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-b2b-hero-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
    opacity: 0.1;
  }

  .ai-b2b-hero-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity }});
    z-index: 1;
  }

  .ai-b2b-hero-content-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
    text-align: center;
    width: 90%;
    max-width: 1200px;
  }

  .ai-b2b-hero-eyebrow-{{ ai_gen_id }} {
    font-family: {{ block.settings.eyebrow_font.family }}, {{ block.settings.eyebrow_font.fallback_families }};
    font-weight: {{ block.settings.eyebrow_font.weight }};
    font-size: {{ block.settings.eyebrow_size }}px;
    color: {{ block.settings.eyebrow_color }};
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin: 0 0 16px 0;
  }

  .ai-b2b-hero-headline-{{ ai_gen_id }} {
    font-family: {{ block.settings.headline_font.family }}, {{ block.settings.headline_font.fallback_families }};
    font-weight: {{ block.settings.headline_font.weight }};
    font-size: {{ block.settings.headline_size }}px;
    color: {{ block.settings.headline_color }};
    letter-spacing: 0.02em;
    text-transform: uppercase;
    margin: 0 0 24px 0;
    line-height: 1.1;
  }

  .ai-b2b-hero-subheadline-{{ ai_gen_id }} {
    font-family: {{ block.settings.subheadline_font.family }}, {{ block.settings.subheadline_font.fallback_families }};
    font-weight: {{ block.settings.subheadline_font.weight }};
    font-size: {{ block.settings.subheadline_size }}px;
    color: {{ block.settings.subheadline_color }};
    margin: 0 0 48px 0;
    line-height: 1.5;
  }

  .ai-b2b-hero-specs-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
    max-width: 900px;
    margin: 0 auto;
  }

  .ai-b2b-hero-spec-{{ ai_gen_id }} {
    text-align: center;
  }

  .ai-b2b-hero-spec-title-{{ ai_gen_id }} {
    font-family: {{ block.settings.spec_title_font.family }}, {{ block.settings.spec_title_font.fallback_families }};
    font-weight: {{ block.settings.spec_title_font.weight }};
    font-size: {{ block.settings.spec_title_size }}px;
    color: {{ block.settings.spec_title_color }};
    letter-spacing: 0.05em;
    text-transform: uppercase;
    margin: 0 0 8px 0;
  }

  .ai-b2b-hero-spec-desc-{{ ai_gen_id }} {
    font-family: {{ block.settings.spec_desc_font.family }}, {{ block.settings.spec_desc_font.fallback_families }};
    font-weight: {{ block.settings.spec_desc_font.weight }};
    font-size: {{ block.settings.spec_desc_size }}px;
    color: {{ block.settings.spec_desc_color }};
    margin: 0;
    line-height: 1.4;
  }

  @media screen and (max-width: 749px) {
    .ai-b2b-hero-eyebrow-{{ ai_gen_id }} {
      font-size: {{ block.settings.eyebrow_size | times: 0.7 }}px;
      margin-bottom: 12px;
    }

    .ai-b2b-hero-headline-{{ ai_gen_id }} {
      font-size: {{ block.settings.headline_size | times: 0.5 }}px;
      margin-bottom: 16px;
    }

    .ai-b2b-hero-subheadline-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheadline_size | times: 0.8 }}px;
      margin-bottom: 32px;
    }

    .ai-b2b-hero-specs-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .ai-b2b-hero-spec-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.spec_title_size | times: 0.9 }}px;
    }

    .ai-b2b-hero-spec-desc-{{ ai_gen_id }} {
      font-size: {{ block.settings.spec_desc_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-b2b-hero-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-b2b-hero-container-{{ ai_gen_id }}">
    {% if block.settings.background_image %}
      <img
        src="{{ block.settings.background_image | image_url: width: 2000 }}"
        alt="{{ block.settings.background_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.background_image.width }}"
        height="{{ block.settings.background_image.height }}"
        class="ai-b2b-hero-image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-b2b-hero-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
      </div>
    {% endif %}

    <div class="ai-b2b-hero-overlay-{{ ai_gen_id }}"></div>

    <div class="ai-b2b-hero-content-{{ ai_gen_id }}">
      {% if block.settings.eyebrow_text != blank %}
        <div class="ai-b2b-hero-eyebrow-{{ ai_gen_id }}">{{ block.settings.eyebrow_text }}</div>
      {% endif %}

      {% if block.settings.headline_text != blank %}
        <h1 class="ai-b2b-hero-headline-{{ ai_gen_id }}">{{ block.settings.headline_text }}</h1>
      {% endif %}

      {% if block.settings.subheadline_text != blank %}
        <div class="ai-b2b-hero-subheadline-{{ ai_gen_id }}">{{ block.settings.subheadline_text }}</div>
      {% endif %}

      <div class="ai-b2b-hero-specs-{{ ai_gen_id }}">
        <div class="ai-b2b-hero-spec-{{ ai_gen_id }}">
          {% if block.settings.spec_1_title != blank %}
            <div class="ai-b2b-hero-spec-title-{{ ai_gen_id }}">{{ block.settings.spec_1_title }}</div>
          {% endif %}
          {% if block.settings.spec_1_desc != blank %}
            <div class="ai-b2b-hero-spec-desc-{{ ai_gen_id }}">{{ block.settings.spec_1_desc }}</div>
          {% endif %}
        </div>

        <div class="ai-b2b-hero-spec-{{ ai_gen_id }}">
          {% if block.settings.spec_2_title != blank %}
            <div class="ai-b2b-hero-spec-title-{{ ai_gen_id }}">{{ block.settings.spec_2_title }}</div>
          {% endif %}
          {% if block.settings.spec_2_desc != blank %}
            <div class="ai-b2b-hero-spec-desc-{{ ai_gen_id }}">{{ block.settings.spec_2_desc }}</div>
          {% endif %}
        </div>

        <div class="ai-b2b-hero-spec-{{ ai_gen_id }}">
          {% if block.settings.spec_3_title != blank %}
            <div class="ai-b2b-hero-spec-title-{{ ai_gen_id }}">{{ block.settings.spec_3_title }}</div>
          {% endif %}
          {% if block.settings.spec_3_desc != blank %}
            <div class="ai-b2b-hero-spec-desc-{{ ai_gen_id }}">{{ block.settings.spec_3_desc }}</div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

