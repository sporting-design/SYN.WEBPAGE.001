{% doc %}
  @prompt
    create a split screen full row where i can put a background image, a heading, subheading, a cta button on the image itself ., there are borders on the outside of the split screen section, spread our split screen section to the edges of the webpage
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-split-screen-{{ ai_gen_id }} {
    display: block;
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    min-height: {{ block.settings.min_height }}px;
  }

  .ai-split-screen-container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    width: 100%;
    min-height: {{ block.settings.min_height }}px;
  }

  .ai-split-screen-image-side-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-split-screen-bg-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .ai-split-screen-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 2;
  }

  .ai-split-screen-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    padding: 40px;
    text-align: {{ block.settings.text_alignment }};
    max-width: 600px;
    width: 100%;
  }

  .ai-split-screen-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 16px 0;
    line-height: 1.2;
  }

  .ai-split-screen-subheading-{{ ai_gen_id }} {
    color: {{ block.settings.subheading_color }};
    font-size: {{ block.settings.subheading_size }}px;
    margin: 0 0 24px 0;
    line-height: 1.5;
  }

  .ai-split-screen-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 14px 32px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    transition: all 0.3s ease;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
  }

  .ai-split-screen-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  .ai-split-screen-empty-side-{{ ai_gen_id }} {
    background-color: {{ block.settings.empty_side_bg_color }};
  }

  .ai-split-screen-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-split-screen-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
    opacity: 0.3;
  }

  .ai-split-screen-empty-message-{{ ai_gen_id }} {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    color: #666;
    font-size: 14px;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-split-screen-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      min-height: auto;
    }

    {% if block.settings.mobile_layout == 'image_first' %}
      .ai-split-screen-image-side-{{ ai_gen_id }} {
        order: 1;
      }
      .ai-split-screen-empty-side-{{ ai_gen_id }} {
        order: 2;
      }
    {% else %}
      .ai-split-screen-image-side-{{ ai_gen_id }} {
        order: 2;
      }
      .ai-split-screen-empty-side-{{ ai_gen_id }} {
        order: 1;
      }
    {% endif %}

    .ai-split-screen-image-side-{{ ai_gen_id }},
    .ai-split-screen-empty-side-{{ ai_gen_id }} {
      min-height: {{ block.settings.mobile_min_height }}px;
    }

    .ai-split-screen-content-{{ ai_gen_id }} {
      padding: 32px 24px;
    }

    .ai-split-screen-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-split-screen-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.85 }}px;
    }
  }
{% endstyle %}

<split-screen-{{ ai_gen_id }} class="ai-split-screen-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-split-screen-container-{{ ai_gen_id }}">
    {% if block.settings.image_position == 'left' %}
      <div class="ai-split-screen-image-side-{{ ai_gen_id }}">
        {% if block.settings.background_image %}
          <img
            src="{{ block.settings.background_image | image_url: width: 1200 }}"
            alt="{{ block.settings.background_image.alt | escape }}"
            class="ai-split-screen-bg-image-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ block.settings.background_image.width }}"
            height="{{ block.settings.background_image.height }}"
          >
        {% else %}
          <div class="ai-split-screen-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
            <div class="ai-split-screen-empty-message-{{ ai_gen_id }}">
              Add a background image
            </div>
          </div>
        {% endif %}

        {% if block.settings.show_overlay %}
          <div class="ai-split-screen-overlay-{{ ai_gen_id }}"></div>
        {% endif %}

        <div class="ai-split-screen-content-{{ ai_gen_id }}">
          {% if block.settings.heading != blank %}
            <h2 class="ai-split-screen-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
          {% endif %}

          {% if block.settings.subheading != blank %}
            <div class="ai-split-screen-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
          {% endif %}

          {% if block.settings.button_text != blank %}
            <a
              href="{{ block.settings.button_link }}"
              class="ai-split-screen-button-{{ ai_gen_id }}"
            >
              {{ block.settings.button_text }}
            </a>
          {% endif %}
        </div>
      </div>

      <div class="ai-split-screen-empty-side-{{ ai_gen_id }}"></div>
    {% else %}
      <div class="ai-split-screen-empty-side-{{ ai_gen_id }}"></div>

      <div class="ai-split-screen-image-side-{{ ai_gen_id }}">
        {% if block.settings.background_image %}
          <img
            src="{{ block.settings.background_image | image_url: width: 1200 }}"
            alt="{{ block.settings.background_image.alt | escape }}"
            class="ai-split-screen-bg-image-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ block.settings.background_image.width }}"
            height="{{ block.settings.background_image.height }}"
          >
        {% else %}
          <div class="ai-split-screen-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
            <div class="ai-split-screen-empty-message-{{ ai_gen_id }}">
              Add a background image
            </div>
          </div>
        {% endif %}

        {% if block.settings.show_overlay %}
          <div class="ai-split-screen-overlay-{{ ai_gen_id }}"></div>
        {% endif %}

        <div class="ai-split-screen-content-{{ ai_gen_id }}">
          {% if block.settings.heading != blank %}
            <h2 class="ai-split-screen-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
          {% endif %}

          {% if block.settings.subheading != blank %}
            <div class="ai-split-screen-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
          {% endif %}

          {% if block.settings.button_text != blank %}
            <a
              href="{{ block.settings.button_link }}"
              class="ai-split-screen-button-{{ ai_gen_id }}"
            >
              {{ block.settings.button_text }}
            </a>
          {% endif %}
        </div>
      </div>
    {% endif %}
  </div>
</split-screen-{{ ai_gen_id }}>

<script>
  (function() {
    class SplitScreen{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
      }
    }

    customElements.define('split-screen-{{ ai_gen_id }}', SplitScreen{{ ai_gen_id }});
  })();
</script>

