{% doc %}
  @prompt
    make a section where there is an image section on one side with text and a button on the other side, and allow for me to add multiple rows of alternating sides
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-text-rows-{{ ai_gen_id }} {
    display: block;
    width: 100%;
  }

  .ai-image-text-row-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.gap }}px;
    margin-bottom: {{ block.settings.row_spacing }}px;
    width: 100%;
  }

  .ai-image-text-row-{{ ai_gen_id }}:last-child {
    margin-bottom: 0;
  }

  .ai-image-text-row-{{ ai_gen_id }}--reverse {
    flex-direction: row-reverse;
  }

  .ai-image-text-image-wrapper-{{ ai_gen_id }} {
    flex: 1;
    min-width: 0;
  }

  .ai-image-text-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-image-text-placeholder-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-image-text-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-image-text-content-{{ ai_gen_id }} {
    flex: 1;
    min-width: 0;
  }

  .ai-image-text-heading-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
  }

  .ai-image-text-text-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.text_spacing }}px;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
  }

  .ai-image-text-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    transition: background-color 0.3s ease, color 0.3s ease;
    font-weight: 600;
  }

  .ai-image-text-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-image-text-row-{{ ai_gen_id }},
    .ai-image-text-row-{{ ai_gen_id }}--reverse {
      flex-direction: column;
      gap: {{ block.settings.mobile_gap }}px;
    }

    .ai-image-text-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-image-text-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-image-text-rows-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% for i in (1..6) %}
    {% liquid
      assign row_enabled_key = 'row_' | append: i | append: '_enabled'
      assign row_image_key = 'row_' | append: i | append: '_image'
      assign row_heading_key = 'row_' | append: i | append: '_heading'
      assign row_text_key = 'row_' | append: i | append: '_text'
      assign row_button_text_key = 'row_' | append: i | append: '_button_text'
      assign row_button_link_key = 'row_' | append: i | append: '_button_link'

      assign row_enabled = block.settings[row_enabled_key]
      assign row_image = block.settings[row_image_key]
      assign row_heading = block.settings[row_heading_key]
      assign row_text = block.settings[row_text_key]
      assign row_button_text = block.settings[row_button_text_key]
      assign row_button_link = block.settings[row_button_link_key]

      assign is_even = i | modulo: 2
      assign should_reverse = false
      if block.settings.alternate_layout and is_even == 0
        assign should_reverse = true
      endif
    %}

    {% if row_enabled %}
      <div class="ai-image-text-row-{{ ai_gen_id }} {% if should_reverse %}ai-image-text-row-{{ ai_gen_id }}--reverse{% endif %}">
        <div class="ai-image-text-image-wrapper-{{ ai_gen_id }}">
          {% if row_image %}
            <img
              src="{{ row_image | image_url: width: 1200 }}"
              alt="{{ row_image.alt | escape }}"
              loading="lazy"
              width="{{ row_image.width }}"
              height="{{ row_image.height }}"
              class="ai-image-text-image-{{ ai_gen_id }}"
              style="aspect-ratio: {{ block.settings.image_aspect_ratio }};"
            >
          {% else %}
            <div class="ai-image-text-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>

        <div class="ai-image-text-content-{{ ai_gen_id }}">
          {% if row_heading != blank %}
            <h2 class="ai-image-text-heading-{{ ai_gen_id }}">{{ row_heading }}</h2>
          {% endif %}

          {% if row_text != blank %}
            <div class="ai-image-text-text-{{ ai_gen_id }}">{{ row_text }}</div>
          {% endif %}

          {% if row_button_text != blank and row_button_link != blank %}
            <a href="{{ row_button_link }}" class="ai-image-text-button-{{ ai_gen_id }}">
              {{ row_button_text }}
            </a>
          {% endif %}
        </div>
      </div>
    {% endif %}
  {% endfor %}
</div>

