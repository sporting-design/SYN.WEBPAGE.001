{% doc %}
  @prompt
    just a 16:9 we frame to place an image, also inform me of what size image png should i resize
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-frame-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    max-width: 100%;
    margin: 0 auto;
  }

  @media screen and (min-width: 750px) {
    .ai-image-frame-{{ ai_gen_id }} {
      width: {{ block.settings.desktop_width_percent }}%;
    }
  }

  .ai-image-frame-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%;
    background-color: {{ block.settings.frame_background }};
    border: {{ block.settings.frame_border_width }}px solid {{ block.settings.frame_border_color }};
    border-radius: {{ block.settings.frame_border_radius }}px;
    overflow: hidden;
  }

  .ai-image-frame-content-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-image-frame-content-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: {{ block.settings.image_fit }};
  }

  .ai-image-frame-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.placeholder_background }};
    position: relative;
  }

  .ai-image-frame-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 225px;
    opacity: 0.3;
  }

  .ai-image-frame-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 16px;
    font-size: 14px;
    color: {{ block.settings.frame_border_color }};
    text-align: center;
    pointer-events: none;
    font-family: {{ block.settings.type_subheading_font.family }}, {{ block.settings.type_subheading_font.fallback_families }};
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
{% endstyle %}

<div class="ai-image-frame-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-image-frame-wrapper-{{ ai_gen_id }}">
    <div class="ai-image-frame-content-{{ ai_gen_id }}">
      {% if block.settings.image %}
        <img
          src="{{ block.settings.image | image_url: width: 1920 }}"
          alt="{{ block.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
        >
      {% else %}
        <div class="ai-image-frame-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-image-frame-empty-state-{{ ai_gen_id }}">
            Add a 16:9 image
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "16:9 image frame",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "info": "Recommended: 1920 x 1080px PNG for best quality"
    },
    {
      "type": "select",
      "id": "image_fit",
      "label": "Image fit",
      "options": [
        {
          "value": "cover",
          "label": "Cover"
        },
        {
          "value": "contain",
          "label": "Contain"
        },
        {
          "value": "fill",
          "label": "Fill"
        }
      ],
      "default": "cover",
      "info": "Cover fills the frame, Contain shows full image"
    },
    {
      "type": "header",
      "content": "Frame style"
    },
    {
      "type": "color",
      "id": "frame_background",
      "label": "Background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "frame_border_color",
      "label": "Border color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "frame_border_width",
      "min": 0,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Border width",
      "default": 2
    },
    {
      "type": "range",
      "id": "frame_border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 0
    },
    {
      "type": "color",
      "id": "placeholder_background",
      "label": "Placeholder background",
      "default": "#f4f4f4"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "desktop_width_percent",
      "label": "Desktop width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    }
  ],
  "presets": [
    {
      "name": "16:9 image frame"
    }
  ]
}
{% endschema %}