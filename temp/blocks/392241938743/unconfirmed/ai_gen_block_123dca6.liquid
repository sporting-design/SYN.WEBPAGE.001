{% doc %}
  @prompt
    create a full landscape fitted div for me to upload an image, include an option to have a seperate photo uploadable for mobile view
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-landscape-image-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
  }

  .ai-landscape-image__desktop-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-landscape-image__mobile-{{ ai_gen_id }} {
    display: none;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-landscape-image__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
    position: relative;
  }

  .ai-landscape-image__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-landscape-image__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-landscape-image__desktop-{{ ai_gen_id }} {
      {% if block.settings.mobile_image %}
        display: none;
      {% endif %}
    }

    .ai-landscape-image__mobile-{{ ai_gen_id }} {
      {% if block.settings.mobile_image %}
        display: block;
      {% endif %}
    }
  }
{% endstyle %}

<div
  class="ai-landscape-image-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.desktop_image %}
    <img
      src="{{ block.settings.desktop_image | image_url: width: 2000 }}"
      alt="{{ block.settings.desktop_image.alt | escape }}"
      loading="lazy"
      width="{{ block.settings.desktop_image.width }}"
      height="{{ block.settings.desktop_image.height }}"
      class="ai-landscape-image__desktop-{{ ai_gen_id }}"
    >
  {% else %}
    <div class="ai-landscape-image__placeholder-{{ ai_gen_id }}">
      {{ 'image' | placeholder_svg_tag }}
      <div class="ai-landscape-image__empty-state-{{ ai_gen_id }}">
        Next, add a desktop image
      </div>
    </div>
  {% endif %}

  {% if block.settings.mobile_image %}
    <img
      src="{{ block.settings.mobile_image | image_url: width: 1000 }}"
      alt="{{ block.settings.mobile_image.alt | escape }}"
      loading="lazy"
      width="{{ block.settings.mobile_image.width }}"
      height="{{ block.settings.mobile_image.height }}"
      class="ai-landscape-image__mobile-{{ ai_gen_id }}"
    >
  {% endif %}
</div>

{% schema %}
{
  "name": "Landscape image",
  "settings": [
    {
      "type": "header",
      "content": "Desktop image"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop image"
    },
    {
      "type": "header",
      "content": "Mobile image"
    },
    {
      "type": "paragraph",
      "content": "Optional. If provided, this image will replace the desktop image on mobile devices."
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile image"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Landscape image"
    }
  ]
}
{% endschema %}
