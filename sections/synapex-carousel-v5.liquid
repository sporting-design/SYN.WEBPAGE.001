{% comment %}
  ╔════════════════════════════════════════════════════════════════╗
  ║  SYNAPEX CINEMA CAROUSEL V5.1 — THE LUXURY ENGINE             ║
  ║  UPGRADES: Native Video Library + Expanded Hit-Zones          ║
  ║  SYNAPEX DNA: Industrial/Tactical UI, Zero Friction           ║
  ╚════════════════════════════════════════════════════════════════╝
{% endcomment %}

<section 
  id="SynapexCarousel-{{ section.id }}" 
  class="synapex-carousel-v5"
  data-autoplay="{{ section.settings.autoplay }}"
  data-speed="{{ section.settings.autoplay_speed | times: 1000 }}"
  style="--carousel-height: {{ section.settings.section_height }}; --carousel-overlay: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"
>
  
  <div class="carousel-track">
    {% for block in section.blocks %}
      <div class="carousel-slide {% if forloop.first %}active{% endif %}" data-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
        
        {% comment %} --- MEDIA LAYER --- {% endcomment %}
        <div class="media-layer">
          
          {% comment %} DESKTOP VIDEO {% endcomment %}
          {% if block.settings.video_desktop != blank %}
            {{ block.settings.video_desktop | video_tag: 
               autoplay: true, 
               loop: true, 
               muted: true, 
               playsinline: true, 
               class: 'vid-desktop', 
               image_size: '2000x' 
            }}
          {% endif %}
          
          {% comment %} MOBILE VIDEO (FALLS BACK TO DESKTOP IF BLANK) {% endcomment %}
          {% if block.settings.video_mobile != blank %}
            {{ block.settings.video_mobile | video_tag: 
               autoplay: true, 
               loop: true, 
               muted: true, 
               playsinline: true, 
               class: 'vid-mobile', 
               image_size: '800x' 
            }}
          {% elsif block.settings.video_desktop != blank %}
             {{ block.settings.video_desktop | video_tag: 
               autoplay: true, 
               loop: true, 
               muted: true, 
               playsinline: true, 
               class: 'vid-mobile', 
               image_size: '800x' 
            }}
          {% endif %}

          {% comment %} IMAGE FALLBACK (If no video exists) {% endcomment %}
          {% if block.settings.video_desktop == blank and block.settings.image_fallback != blank %}
             {{ block.settings.image_fallback | image_url: width: 2000 | image_tag: class: 'img-layer', loading: 'lazy' }}
          {% endif %}
        </div>

        <div class="overlay-layer"></div>

        {% comment %} --- CONTENT LAYER --- {% endcomment %}
        <div class="content-layer pos-{{ block.settings.text_position }}">
          <div class="text-box">
            
            {% comment %} TAGLINE / COPYRIGHT DIV {% endcomment %}
            {% if block.settings.tagline != blank %}
              <div class="c-tagline">
                <span class="tagline-icon">≠</span> {{ block.settings.tagline }}
              </div>
            {% endif %}

            {% if block.settings.heading != blank %}
              <h2 class="c-heading">{{ block.settings.heading }}</h2>
            {% endif %}
            
            {% if block.settings.subheading != blank %}
              <p class="c-sub">{{ block.settings.subheading }}</p>
            {% endif %}
            
            {% if block.settings.button_label != blank %}
              <a href="{{ block.settings.button_link }}" class="c-btn">
                {{ block.settings.button_label }}
              </a>
            {% endif %}
          </div>
        </div>

      </div>
    {% endfor %}
  </div>

  {% comment %} --- TACTICAL NAVIGATION (LUXURY TOUCH ZONES) --- {% endcomment %}
  {% if section.blocks.size > 1 %}
    <div class="nav-container">
      {% for block in section.blocks %}
        <button class="nav-pill {% if forloop.first %}active{% endif %}" data-target="{{ forloop.index0 }}" aria-label="Go to slide {{ forloop.index }}">
          <span class="pill-visual"></span>
        </button>
      {% endfor %}
    </div>
  {% endif %}

</section>

<style>
  /* ═══════════════════════════════════════════════════════════════
     SYNAPEX CAROUSEL V5 — BASE ARCHITECTURE
  ═══════════════════════════════════════════════════════════════ */
  .synapex-carousel-v5 {
    position: relative;
    width: 100%;
    height: var(--carousel-height);
    background: #000;
    overflow: hidden;
  }
  
  .carousel-slide {
    position: absolute;
    inset: 0;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 1;
  }
  .carousel-slide.active { opacity: 1; visibility: visible; z-index: 2; }

  /* MEDIA */
  .media-layer, .vid-desktop, .vid-mobile, .img-layer {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  /* NATIVE VIDEO TAG FIXES */
  video.vid-desktop, video.vid-mobile {
    object-fit: cover;
    width: 100%;
    height: 100%;
  }

  .vid-mobile { display: none; }
  @media(max-width: 768px) {
    .vid-desktop { display: none; }
    .vid-mobile { display: block; }
  }

  .overlay-layer {
    position: absolute;
    inset: 0;
    background: rgba(0,0,0, var(--carousel-overlay));
    z-index: 2;
    pointer-events: none;
  }

  /* ═══════════════════════════════════════════════════════════════
     CONTENT LAYOUT (9-GRID)
  ═══════════════════════════════════════════════════════════════ */
  .content-layer {
    position: absolute;
    inset: 0;
    z-index: 3;
    padding: 60px;
    display: flex;
    pointer-events: none;
  }
  .text-box { pointer-events: auto; max-width: 700px; }

  .pos-top-left      { justify-content: flex-start; align-items: flex-start; text-align: left; }
  .pos-top-center    { justify-content: center;     align-items: flex-start; text-align: center; }
  .pos-top-right     { justify-content: flex-end;   align-items: flex-start; text-align: right; }
  .pos-center-left   { justify-content: flex-start; align-items: center;     text-align: left; }
  .pos-center        { justify-content: center;     align-items: center;     text-align: center; }
  .pos-center-right  { justify-content: flex-end;   align-items: center;     text-align: right; }
  .pos-bottom-left   { justify-content: flex-start; align-items: flex-end;   text-align: left; }
  .pos-bottom-center { justify-content: center;     align-items: flex-end;   text-align: center; }
  .pos-bottom-right  { justify-content: flex-end;   align-items: flex-end;   text-align: right; }

  /* ═══════════════════════════════════════════════════════════════
     TYPOGRAPHY — THE SYNAPEX STANDARD
  ═══════════════════════════════════════════════════════════════ */
  .c-tagline {
    display: inline-block;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: #fff;
    margin-bottom: 16px;
    background: rgba(255,255,255,0.12);
    padding: 6px 14px;
    border-radius: 2px;
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255,255,255,0.15);
  }
  .tagline-icon { margin-right: 8px; color: #fff; font-weight: 400; }

  .c-heading {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
    font-size: clamp(2.5rem, 6vw, 5.5rem);
    font-weight: 900;
    line-height: 0.95;
    letter-spacing: -0.02em;
    text-transform: uppercase;
    color: #fff;
    margin: 0 0 20px 0;
    text-shadow: 0 4px 24px rgba(0,0,0,0.4);
  }

  .c-sub {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
    font-size: clamp(1rem, 1.5vw, 1.375rem);
    font-weight: 400;
    line-height: 1.5;
    letter-spacing: 0.01em;
    color: rgba(255,255,255,0.95);
    margin: 0 0 32px 0;
    max-width: 540px;
  }
  
  /* Alignment Fixes */
  .pos-center .c-sub, .pos-top-center .c-sub, .pos-bottom-center .c-sub { margin-inline: auto; }
  .pos-center-right .c-sub, .pos-top-right .c-sub, .pos-bottom-right .c-sub { margin-left: auto; }

  .c-btn {
    display: inline-block;
    padding: 16px 42px;
    background: #fff;
    color: #000;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
    font-size: 0.875rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    text-decoration: none;
    border: 2px solid #fff;
    transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
  }
  .c-btn:hover { 
    background: transparent; 
    color: #fff;
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(255,255,255,0.15);
  }

  /* ═══════════════════════════════════════════════════════════════
     TACTICAL NAVIGATION — LUXURY HIT ZONES
  ═══════════════════════════════════════════════════════════════ */
  .nav-container {
    position: absolute;
    bottom: 48px;
    right: 48px;
    z-index: 10;
    display: flex;
    gap: 8px; /* Reduced gap, padding handles spacing */
  }

  .nav-pill {
    /* INVISIBLE TOUCH ZONE - THE UX UPGRADE */
    width: 60px;     /* Large width for easy clicking */
    height: 44px;    /* Standard Touch Height (Apple Guideline) */
    background: transparent;
    border: none;
    padding: 0;
    cursor: pointer;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .pill-visual {
    /* THE VISUAL INDICATOR - TACTICAL LINE */
    display: block;
    width: 100%;
    height: 3px; /* Slightly thicker for visibility */
    background: rgba(255,255,255,0.3);
    border-radius: 2px;
    transition: all 0.4s cubic-bezier(0.25, 1, 0.5, 1);
    pointer-events: none;
  }

  /* HOVER STATE - PREVIEW */
  .nav-pill:hover .pill-visual {
    background: rgba(255,255,255,0.7);
    height: 4px; /* Subtle expansion */
  }

  /* ACTIVE STATE - DEPLOYED */
  .nav-pill.active .pill-visual {
    background: #fff;
    height: 4px;
    box-shadow: 0 0 15px rgba(255,255,255,0.5); /* GLOW EFFECT */
  }

  /* ═══════════════════════════════════════════════════════════════
     MOBILE RESPONSIVENESS
  ═══════════════════════════════════════════════════════════════ */
  @media(max-width: 768px) {
    .content-layer { padding: 32px 24px; }
    .c-heading { font-size: clamp(2rem, 8vw, 3rem); }
    
    .nav-container { 
      bottom: 28px; 
      right: 50%;
      transform: translateX(50%);
      gap: 4px;
    }
    
    /* Mobile touch targets need to be even more forgiving */
    .nav-pill {
      width: 48px; 
      height: 44px;
    }
  }
</style>

<script>
  (function(){
    'use strict';
    const root = document.getElementById('SynapexCarousel-{{ section.id }}');
    if (!root) return;
    
    const slides = root.querySelectorAll('.carousel-slide');
    const pills = root.querySelectorAll('.nav-pill');
    if (slides.length === 0) return;
    
    let currentIndex = 0;
    let autoplayTimer = null;
    const autoplayEnabled = root.dataset.autoplay === 'true';
    const autoplaySpeed = parseInt(root.dataset.speed, 10) || 5000;

    function transitionToSlide(targetIndex) {
      const nextIndex = ((targetIndex % slides.length) + slides.length) % slides.length;
      if (nextIndex === currentIndex) return;
      
      // Deactivate
      slides[currentIndex].classList.remove('active');
      if (pills[currentIndex]) pills[currentIndex].classList.remove('active');
      
      const oldVideos = slides[currentIndex].querySelectorAll('video');
      oldVideos.forEach(v => v.pause());

      // Update
      currentIndex = nextIndex;
      
      // Activate
      slides[currentIndex].classList.add('active');
      if (pills[currentIndex]) pills[currentIndex].classList.add('active');
      
      const newVideos = slides[currentIndex].querySelectorAll('video');
      newVideos.forEach(v => {
        v.currentTime = 0;
        v.play().catch(()=>{});
      });
    }

    pills.forEach((pill, index) => {
      pill.addEventListener('click', () => {
        transitionToSlide(index);
        resetAutoplayTimer(); // User interaction resets timer
      });
    });

    function startAutoplayTimer() {
      if (!autoplayEnabled) return;
      autoplayTimer = setInterval(() => {
        transitionToSlide(currentIndex + 1);
      }, autoplaySpeed);
    }
    
    function resetAutoplayTimer() {
      clearInterval(autoplayTimer);
      startAutoplayTimer();
    }
    
    function stopAutoplayTimer() {
      clearInterval(autoplayTimer);
    }

    if (window.matchMedia('(min-width: 769px)').matches) {
      root.addEventListener('mouseenter', stopAutoplayTimer);
      root.addEventListener('mouseleave', startAutoplayTimer);
    }

    // Init
    const firstVideos = slides[0].querySelectorAll('video');
    firstVideos.forEach(v => v.play().catch(()=>{}));
    startAutoplayTimer();
    window.addEventListener('beforeunload', stopAutoplayTimer);
  })();
</script>

