{% comment %}
  ╔════════════════════════════════════════════════════════════════╗
  ║  SYNAPEX CINEMA CAROUSEL V5 — THE HARMONY ENGINE              ║
  ║  Multi-Slide Video Carousel with Tactical Navigation          ║
  ║  SYNAPEX DNA: Industrial/Tactical UI, Maximum Performance     ║
  ╚════════════════════════════════════════════════════════════════╝
{% endcomment %}

<section 
  id="SynapexCarousel-{{ section.id }}" 
  class="synapex-carousel-v5"
  data-autoplay="{{ section.settings.autoplay }}"
  data-speed="{{ section.settings.autoplay_speed | times: 1000 }}"
  style="--carousel-height: {{ section.settings.section_height }}; --carousel-overlay: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"
>
  
  <div class="carousel-track">
    {% for block in section.blocks %}
      <div class="carousel-slide {% if forloop.first %}active{% endif %}" data-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
        
        {% comment %} --- MEDIA LAYER --- {% endcomment %}
        <div class="media-layer">
          {% if block.settings.video_desktop != blank %}
            <video class="vid-desktop" autoplay muted loop playsinline poster="{{ block.settings.image_fallback | image_url: width: 2000 }}">
              <source src="{{ block.settings.video_desktop }}" type="video/mp4">
            </video>
          {% endif %}
          
          {% if block.settings.video_mobile != blank %}
            <video class="vid-mobile" autoplay muted loop playsinline poster="{{ block.settings.image_fallback | image_url: width: 800 }}">
              <source src="{{ block.settings.video_mobile }}" type="video/mp4">
            </video>
          {% elsif block.settings.video_desktop != blank %}
            <video class="vid-mobile" autoplay muted loop playsinline src="{{ block.settings.video_desktop }}"></video>
          {% endif %}

          {% if block.settings.video_desktop == blank and block.settings.image_fallback != blank %}
             {{ block.settings.image_fallback | image_url: width: 2000 | image_tag: class: 'img-layer', loading: 'lazy' }}
          {% endif %}
        </div>

        <div class="overlay-layer"></div>

        {% comment %} --- CONTENT LAYER --- {% endcomment %}
        <div class="content-layer pos-{{ block.settings.text_position }}">
          <div class="text-box">
            
            {% comment %} TAGLINE / COPYRIGHT DIV {% endcomment %}
            {% if block.settings.tagline != blank %}
              <div class="c-tagline">
                <span class="tagline-icon">≠</span> {{ block.settings.tagline }}
              </div>
            {% endif %}

            {% if block.settings.heading != blank %}
              <h2 class="c-heading">{{ block.settings.heading }}</h2>
            {% endif %}
            
            {% if block.settings.subheading != blank %}
              <p class="c-sub">{{ block.settings.subheading }}</p>
            {% endif %}
            
            {% if block.settings.button_label != blank %}
              <a href="{{ block.settings.button_link }}" class="c-btn">
                {{ block.settings.button_label }}
              </a>
            {% endif %}
          </div>
        </div>

      </div>
    {% endfor %}
  </div>

  {% comment %} --- TACTICAL NAVIGATION --- {% endcomment %}
  {% if section.blocks.size > 1 %}
    <div class="nav-container">
      {% for block in section.blocks %}
        <button class="nav-pill {% if forloop.first %}active{% endif %}" data-target="{{ forloop.index0 }}" aria-label="Slide {{ forloop.index }}">
          <span class="progress-bar"></span>
        </button>
      {% endfor %}
    </div>
  {% endif %}

</section>

<style>
  /* ═══════════════════════════════════════════════════════════════
     SYNAPEX CAROUSEL V5 — BASE ARCHITECTURE
     INDUSTRIAL/TACTICAL AESTHETIC
  ═══════════════════════════════════════════════════════════════ */
  .synapex-carousel-v5 {
    position: relative;
    width: 100%;
    height: var(--carousel-height);
    background: #000;
    overflow: hidden;
  }
  
  .carousel-slide {
    position: absolute;
    inset: 0;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 1;
  }
  .carousel-slide.active { opacity: 1; visibility: visible; z-index: 2; }

  /* MEDIA */
  .media-layer, .vid-desktop, .vid-mobile, .img-layer {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .vid-mobile { display: none; }
  @media(max-width: 768px) {
    .vid-desktop { display: none; }
    .vid-mobile { display: block; }
  }

  .overlay-layer {
    position: absolute;
    inset: 0;
    background: rgba(0,0,0, var(--carousel-overlay));
    z-index: 2;
    pointer-events: none;
  }

  /* TEXT POSITIONS (The 9-Grid) */
  .content-layer {
    position: absolute;
    inset: 0;
    z-index: 3;
    padding: 60px;
    display: flex;
    pointer-events: none;
  }
  .text-box { pointer-events: auto; max-width: 700px; }

  .pos-top-left      { justify-content: flex-start; align-items: flex-start; text-align: left; }
  .pos-top-center    { justify-content: center;     align-items: flex-start; text-align: center; }
  .pos-top-right     { justify-content: flex-end;   align-items: flex-start; text-align: right; }
  .pos-center-left   { justify-content: flex-start; align-items: center;     text-align: left; }
  .pos-center        { justify-content: center;     align-items: center;     text-align: center; }
  .pos-center-right  { justify-content: flex-end;   align-items: center;     text-align: right; }
  .pos-bottom-left   { justify-content: flex-start; align-items: flex-end;   text-align: left; }
  .pos-bottom-center { justify-content: center;     align-items: flex-end;   text-align: center; }
  .pos-bottom-right  { justify-content: flex-end;   align-items: flex-end;   text-align: right; }

  /* ═══════════════════════════════════════════════════════════════
     SYNAPEX TYPOGRAPHY — INDUSTRIAL/TACTICAL DNA
  ═══════════════════════════════════════════════════════════════ */
  .c-tagline {
    display: inline-block;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: #fff;
    margin-bottom: 16px;
    background: rgba(255,255,255,0.12);
    padding: 6px 14px;
    border-radius: 2px;
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255,255,255,0.15);
  }
  .tagline-icon { 
    margin-right: 8px; 
    color: #fff;
    font-weight: 400;
  }

  .c-heading {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
    font-size: clamp(2.5rem, 6vw, 5.5rem);
    font-weight: 900;
    line-height: 0.95;
    letter-spacing: -0.02em;
    text-transform: uppercase;
    color: #fff;
    margin: 0 0 20px 0;
    text-shadow: 0 4px 24px rgba(0,0,0,0.4);
  }

  .c-sub {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
    font-size: clamp(1rem, 1.5vw, 1.375rem);
    font-weight: 400;
    line-height: 1.5;
    letter-spacing: 0.01em;
    color: rgba(255,255,255,0.95);
    margin: 0 0 32px 0;
    max-width: 540px;
  }
  
  /* Auto-center alignment for centered positions */
  .pos-center .c-sub, 
  .pos-top-center .c-sub, 
  .pos-bottom-center .c-sub { 
    margin-inline: auto; 
  }
  .pos-center-right .c-sub, 
  .pos-top-right .c-sub, 
  .pos-bottom-right .c-sub { 
    margin-left: auto; 
  }

  .c-btn {
    display: inline-block;
    padding: 16px 42px;
    background: #fff;
    color: #000;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
    font-size: 0.875rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    text-decoration: none;
    border: 2px solid #fff;
    transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
  }
  .c-btn:hover { 
    background: transparent; 
    color: #fff;
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(255,255,255,0.15);
  }
  .c-btn:active {
    transform: translateY(0);
  }

  /* ═══════════════════════════════════════════════════════════════
     TACTICAL NAVIGATION — PILL SYSTEM
  ═══════════════════════════════════════════════════════════════ */
  .nav-container {
    position: absolute;
    bottom: 48px;
    right: 48px;
    z-index: 10;
    display: flex;
    gap: 12px;
  }

  .nav-pill {
    width: 44px;
    height: 4px;
    background: rgba(255,255,255,0.35);
    border: none;
    padding: 0;
    cursor: pointer;
    position: relative;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border-radius: 2px;
  }
  
  .nav-pill:hover {
    background: rgba(255,255,255,0.6);
  }
  
  .nav-pill.active { 
    width: 64px; 
    background: #fff;
    box-shadow: 0 2px 8px rgba(255,255,255,0.3);
  }

  /* ═══════════════════════════════════════════════════════════════
     MOBILE RESPONSIVENESS — SYNAPEX STANDARDS
  ═══════════════════════════════════════════════════════════════ */
  @media(max-width: 768px) {
    .content-layer { 
      padding: 32px 24px; 
    }
    
    .text-box {
      max-width: 100%;
    }
    
    .c-tagline {
      font-size: 0.7rem;
      padding: 5px 12px;
      letter-spacing: 0.15em;
    }
    
    .c-heading {
      font-size: clamp(2rem, 8vw, 3rem);
      margin-bottom: 16px;
      line-height: 1;
    }
    
    .c-sub {
      font-size: clamp(0.95rem, 4vw, 1.125rem);
      margin-bottom: 24px;
      max-width: 100%;
    }
    
    .c-btn { 
      width: 100%; 
      text-align: center;
      padding: 14px 32px;
      font-size: 0.8rem;
    }
    
    .nav-container { 
      bottom: 28px; 
      right: 50%;
      transform: translateX(50%);
    }
    
    .nav-pill {
      width: 32px;
      height: 3px;
    }
    
    .nav-pill.active {
      width: 48px;
    }
  }

  @media(max-width: 480px) {
    .content-layer {
      padding: 24px 20px;
    }
    
    .c-heading {
      font-size: 1.75rem;
    }
    
    .c-sub {
      font-size: 0.9rem;
    }
    
    .c-btn {
      padding: 12px 24px;
      font-size: 0.75rem;
    }
  }

  /* ═══════════════════════════════════════════════════════════════
     ACCESSIBILITY & PERFORMANCE
  ═══════════════════════════════════════════════════════════════ */
  @media (prefers-reduced-motion: reduce) {
    .carousel-slide,
    .nav-pill,
    .c-btn {
      transition: none;
    }
  }
</style>

<script>
  {% comment %} SYNAPEX CAROUSEL V5 — HARMONY ENGINE {% endcomment %}
  (function(){
    'use strict';
    
    const root = document.getElementById('SynapexCarousel-{{ section.id }}');
    if (!root) return;
    
    const slides = root.querySelectorAll('.carousel-slide');
    const pills = root.querySelectorAll('.nav-pill');
    
    if (slides.length === 0) return;
    
    let currentIndex = 0;
    let autoplayTimer = null;
    
    const autoplayEnabled = root.dataset.autoplay === 'true';
    const autoplaySpeed = parseInt(root.dataset.speed, 10) || 5000;

    // ═══════════════════════════════════════════════════════════════
    // SLIDE TRANSITION FUNCTION
    // ═══════════════════════════════════════════════════════════════
    function transitionToSlide(targetIndex) {
      // Ensure index wraps correctly
      const nextIndex = ((targetIndex % slides.length) + slides.length) % slides.length;
      
      if (nextIndex === currentIndex) return;
      
      // Deactivate current slide
      slides[currentIndex].classList.remove('active');
      if (pills[currentIndex]) pills[currentIndex].classList.remove('active');
      
      // Pause videos in old slide
      const oldVideos = slides[currentIndex].querySelectorAll('video');
      oldVideos.forEach(video => {
        video.pause();
      });

      // Update index
      currentIndex = nextIndex;
      
      // Activate new slide
      slides[currentIndex].classList.add('active');
      if (pills[currentIndex]) pills[currentIndex].classList.add('active');
      
      // Play videos in new slide
      const newVideos = slides[currentIndex].querySelectorAll('video');
      newVideos.forEach(video => {
        video.currentTime = 0;
        video.play().catch(() => {
          // Autoplay blocked — expected on some browsers
        });
      });
    }

    // ═══════════════════════════════════════════════════════════════
    // NAVIGATION PILL HANDLERS
    // ═══════════════════════════════════════════════════════════════
    pills.forEach((pill, index) => {
      pill.addEventListener('click', () => {
        transitionToSlide(index);
        resetAutoplayTimer();
      });
    });

    // ═══════════════════════════════════════════════════════════════
    // AUTOPLAY TIMER MANAGEMENT
    // ═══════════════════════════════════════════════════════════════
    function startAutoplayTimer() {
      if (!autoplayEnabled) return;
      autoplayTimer = setInterval(() => {
        transitionToSlide(currentIndex + 1);
      }, autoplaySpeed);
    }
    
    function resetAutoplayTimer() {
      if (autoplayTimer) {
        clearInterval(autoplayTimer);
      }
      startAutoplayTimer();
    }
    
    function stopAutoplayTimer() {
      if (autoplayTimer) {
        clearInterval(autoplayTimer);
      }
    }

    // Pause autoplay when user hovers (desktop only)
    if (window.matchMedia('(min-width: 769px)').matches) {
      root.addEventListener('mouseenter', stopAutoplayTimer);
      root.addEventListener('mouseleave', startAutoplayTimer);
    }

    // ═══════════════════════════════════════════════════════════════
    // INITIALIZE
    // ═══════════════════════════════════════════════════════════════
    // Play first slide video
    const firstSlideVideos = slides[0].querySelectorAll('video');
    firstSlideVideos.forEach(video => {
      video.play().catch(() => {});
    });

    // Start autoplay if enabled
    startAutoplayTimer();

    // Cleanup on page unload
    window.addEventListener('beforeunload', () => {
      stopAutoplayTimer();
    });
  })();
</script>

