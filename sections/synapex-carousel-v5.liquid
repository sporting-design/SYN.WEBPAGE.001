{% comment %}
  SYNAPEX CINEMA CAROUSEL V5 (THE HARMONY ENGINE)
  - Schema Limit Fixed (Seconds vs Milliseconds)
  - Infinite Loop Autoplay
  - Tactical Pill Navigation
  - 9-Point Text Positioning
  - Movable Tagline/Copyright Div
{% endcomment %}

<div 
  id="Carousel-{{ section.id }}" 
  class="synapex-carousel-v5"
  data-autoplay="{{ section.settings.autoplay }}"
  data-speed="{{ section.settings.autoplay_speed | times: 1000 }}"
  style="--height: {{ section.settings.section_height }}; --overlay: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"
>
  
  <div class="carousel-track">
    {% for block in section.blocks %}
      <div class="carousel-slide {% if forloop.first %}active{% endif %}" data-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
        
        {% comment %} --- MEDIA LAYER --- {% endcomment %}
        <div class="media-layer">
          {% if block.settings.video_desktop != blank %}
            <video class="vid-desktop" autoplay muted loop playsinline poster="{{ block.settings.image_fallback | image_url: width: 2000 }}">
              <source src="{{ block.settings.video_desktop }}" type="video/mp4">
            </video>
          {% endif %}
          
          {% if block.settings.video_mobile != blank %}
            <video class="vid-mobile" autoplay muted loop playsinline poster="{{ block.settings.image_fallback | image_url: width: 800 }}">
              <source src="{{ block.settings.video_mobile }}" type="video/mp4">
            </video>
          {% elsif block.settings.video_desktop != blank %}
            <video class="vid-mobile" autoplay muted loop playsinline src="{{ block.settings.video_desktop }}"></video>
          {% endif %}

          {% if block.settings.video_desktop == blank and block.settings.image_fallback != blank %}
             {{ block.settings.image_fallback | image_url: width: 2000 | image_tag: class: 'img-layer', loading: 'lazy' }}
          {% endif %}
        </div>

        <div class="overlay-layer"></div>

        {% comment %} --- CONTENT LAYER --- {% endcomment %}
        <div class="content-layer pos-{{ block.settings.text_position }}">
          <div class="text-box">
            
            {% comment %} TAGLINE / COPYRIGHT DIV {% endcomment %}
            {% if block.settings.tagline != blank %}
              <div class="c-tagline">
                <span class="tagline-icon">â‰ </span> {{ block.settings.tagline }}
              </div>
            {% endif %}

            {% if block.settings.heading != blank %}
              <h2 class="c-heading">{{ block.settings.heading }}</h2>
            {% endif %}
            
            {% if block.settings.subheading != blank %}
              <p class="c-sub">{{ block.settings.subheading }}</p>
            {% endif %}
            
            {% if block.settings.button_label != blank %}
              <a href="{{ block.settings.button_link }}" class="c-btn">
                {{ block.settings.button_label }}
              </a>
            {% endif %}
          </div>
        </div>

      </div>
    {% endfor %}
  </div>

  {% comment %} --- TACTICAL NAVIGATION --- {% endcomment %}
  {% if section.blocks.size > 1 %}
    <div class="nav-container">
      {% for block in section.blocks %}
        <button class="nav-pill {% if forloop.first %}active{% endif %}" data-target="{{ forloop.index0 }}" aria-label="Slide {{ forloop.index }}">
          <span class="progress-bar"></span>
        </button>
      {% endfor %}
    </div>
  {% endif %}

</div>

<style>
  /* LAYOUT */
  .synapex-carousel-v5 {
    position: relative;
    width: 100%;
    height: var(--height);
    background: #000;
    overflow: hidden;
  }
  
  .carousel-slide {
    position: absolute;
    inset: 0;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 1;
  }
  .carousel-slide.active { opacity: 1; visibility: visible; z-index: 2; }

  /* MEDIA */
  .media-layer, .vid-desktop, .vid-mobile, .img-layer {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .vid-mobile { display: none; }
  @media(max-width: 768px) {
    .vid-desktop { display: none; }
    .vid-mobile { display: block; }
  }

  .overlay-layer {
    position: absolute;
    inset: 0;
    background: rgba(0,0,0, var(--overlay));
    z-index: 2;
    pointer-events: none;
  }

  /* TEXT POSITIONS (The 9-Grid) */
  .content-layer {
    position: absolute;
    inset: 0;
    z-index: 3;
    padding: 60px;
    display: flex;
    pointer-events: none;
  }
  .text-box { pointer-events: auto; max-width: 700px; }

  .pos-top-left      { justify-content: flex-start; align-items: flex-start; text-align: left; }
  .pos-top-center    { justify-content: center;     align-items: flex-start; text-align: center; }
  .pos-top-right     { justify-content: flex-end;   align-items: flex-start; text-align: right; }
  .pos-center-left   { justify-content: flex-start; align-items: center;     text-align: left; }
  .pos-center        { justify-content: center;     align-items: center;     text-align: center; }
  .pos-center-right  { justify-content: flex-end;   align-items: center;     text-align: right; }
  .pos-bottom-left   { justify-content: flex-start; align-items: flex-end;   text-align: left; }
  .pos-bottom-center { justify-content: center;     align-items: flex-end;   text-align: center; }
  .pos-bottom-right  { justify-content: flex-end;   align-items: flex-end;   text-align: right; }

  /* TYPOGRAPHY */
  .c-tagline {
    display: inline-block;
    font-size: 0.8rem;
    font-weight: 700;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: #fff;
    margin-bottom: 12px;
    background: rgba(255,255,255,0.1);
    padding: 4px 10px;
    border-radius: 2px;
    backdrop-filter: blur(4px);
  }
  .tagline-icon { margin-right: 6px; color: #fff; }

  .c-heading {
    font-family: 'Helvetica Neue', sans-serif;
    font-size: clamp(2.5rem, 6vw, 5rem);
    font-weight: 900;
    line-height: 0.9;
    text-transform: uppercase;
    color: #fff;
    margin: 0 0 15px 0;
    text-shadow: 0 4px 20px rgba(0,0,0,0.3);
  }

  .c-sub {
    font-size: clamp(1rem, 1.5vw, 1.25rem);
    font-weight: 400;
    color: rgba(255,255,255,0.9);
    margin: 0 0 25px 0;
    max-width: 500px;
  }
  
  /* Auto-center fix */
  .pos-center .c-sub, .pos-top-center .c-sub, .pos-bottom-center .c-sub { margin-inline: auto; }
  .pos-center-right .c-sub, .pos-top-right .c-sub, .pos-bottom-right .c-sub { margin-left: auto; }

  .c-btn {
    display: inline-block;
    padding: 16px 40px;
    background: #fff;
    color: #000;
    text-transform: uppercase;
    font-weight: 800;
    text-decoration: none;
    border: 2px solid #fff;
    transition: all 0.2s ease;
  }
  .c-btn:hover { background: transparent; color: #fff; }

  /* TACTICAL NAVIGATION */
  .nav-container {
    position: absolute;
    bottom: 40px;
    right: 40px;
    z-index: 10;
    display: flex;
    gap: 10px;
  }

  .nav-pill {
    width: 40px;
    height: 4px;
    background: rgba(255,255,255,0.3);
    border: none;
    padding: 0;
    cursor: pointer;
    position: relative;
    overflow: hidden;
    transition: width 0.3s ease;
  }
  
  .nav-pill.active { width: 60px; background: #fff; }

  @media(max-width: 768px) {
    .content-layer { padding: 24px; }
    .nav-container { bottom: 24px; right: 24px; }
    .c-btn { width: 100%; text-align: center; }
  }
</style>

<script>
  (function(){
    const root = document.getElementById('Carousel-{{ section.id }}');
    if(!root) return;
    
    const slides = root.querySelectorAll('.carousel-slide');
    const pills = root.querySelectorAll('.nav-pill');
    let index = 0;
    let timer;
    
    const autoplay = root.dataset.autoplay === 'true';
    const speed = parseInt(root.dataset.speed) || 5000;

    function goToSlide(i) {
      // Wrap around index
      const nextIndex = (i + slides.length) % slides.length;
      
      // Current Out
      slides[index].classList.remove('active');
      if(pills[index]) pills[index].classList.remove('active');
      
      // Pause Old Video
      slides[index].querySelectorAll('video').forEach(v => v.pause());

      // Next In
      index = nextIndex;
      slides[index].classList.add('active');
      if(pills[index]) pills[index].classList.add('active');
      
      // Play New Video
      slides[index].querySelectorAll('video').forEach(v => {
        v.currentTime = 0;
        v.play().catch(()=>{});
      });
    }

    pills.forEach(pill => {
      pill.addEventListener('click', () => {
        goToSlide(parseInt(pill.dataset.target));
        resetTimer();
      });
    });

    function startTimer() {
      if(!autoplay) return;
      timer = setInterval(() => goToSlide(index + 1), speed);
    }
    
    function resetTimer() {
      clearInterval(timer);
      startTimer();
    }

    startTimer();
  })();
</script>

{% schema %}
{
  "name": "Synapex Carousel V5",
  "settings": [
    {
      "type": "select",
      "id": "section_height",
      "label": "Height",
      "options": [
        { "value": "100vh", "label": "Full Screen" },
        { "value": "85vh", "label": "Tall" },
        { "value": "70vh", "label": "Standard" }
      ],
      "default": "100vh"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay Darkness",
      "min": 0,
      "max": 90,
      "step": 5,
      "default": 20,
      "unit": "%"
    },
    {
      "type": "header",
      "content": "Autoplay"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Enable Infinite Loop",
      "default": true
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "label": "Speed (Seconds)",
      "min": 3,
      "max": 9,
      "step": 1,
      "default": 5
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "header",
          "content": "Media"
        },
        {
          "type": "url",
          "id": "video_desktop",
          "label": "Desktop Video (MP4 Link)"
        },
        {
          "type": "url",
          "id": "video_mobile",
          "label": "Mobile Video (MP4 Link)"
        },
        {
          "type": "image_picker",
          "id": "image_fallback",
          "label": "Image Fallback"
        },
        {
          "type": "header",
          "content": "Content"
        },
        {
          "type": "text",
          "id": "tagline",
          "label": "Tagline / Copyright",
          "default": "PROTOCOL 01"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "ENGINEERED FOR VICTORY"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading",
          "default": "The standard is absolute."
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button",
          "default": "SHOP THE COLLECTION"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Link"
        },
        {
          "type": "select",
          "id": "text_position",
          "label": "Text Position",
          "options": [
            { "value": "top-left", "label": "Top Left" },
            { "value": "top-center", "label": "Top Center" },
            { "value": "top-right", "label": "Top Right" },
            { "value": "center-left", "label": "Center Left" },
            { "value": "center", "label": "Center" },
            { "value": "center-right", "label": "Center Right" },
            { "value": "bottom-left", "label": "Bottom Left" },
            { "value": "bottom-center", "label": "Bottom Center" },
            { "value": "bottom-right", "label": "Bottom Right" }
          ],
          "default": "bottom-left"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Synapex Carousel V5",
      "blocks": [
        { "type": "slide" },
        { "type": "slide" },
        { "type": "slide" }
      ]
    }
  ]
}
{% endschema %}