{% comment %}
  SYNAPEX CINEMA CAROUSEL V4 (MASTER CLASS)
  Nike-Grade Architecture // Full Bleed // Mobile Optimized
{% endcomment %}

<div 
  id="Carousel-{{ section.id }}" 
  class="synapex-carousel-v4"
  data-autoplay="{{ section.settings.autoplay }}"
  data-speed="{{ section.settings.autoplay_speed }}"
  style="--carousel-height: {{ section.settings.section_height }}; --overlay: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"
>
  
  <div class="carousel-track">
    {% for block in section.blocks %}
      <div class="carousel-slide {% if forloop.first %}active{% endif %}" data-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
        
        {% comment %} MEDIA LAYER {% endcomment %}
        <div class="slide-media">
          {% if block.settings.video_desktop != blank %}
            <video class="vid-desktop" autoplay muted loop playsinline poster="{{ block.settings.image_fallback | image_url: width: 2000 }}">
              <source src="{{ block.settings.video_desktop }}" type="video/mp4">
            </video>
          {% endif %}
          
          {% if block.settings.video_mobile != blank %}
            <video class="vid-mobile" autoplay muted loop playsinline poster="{{ block.settings.image_fallback | image_url: width: 800 }}">
              <source src="{{ block.settings.video_mobile }}" type="video/mp4">
            </video>
          {% elsif block.settings.video_desktop != blank %}
            <video class="vid-mobile" autoplay muted loop playsinline src="{{ block.settings.video_desktop }}"></video>
          {% endif %}

          {% if block.settings.video_desktop == blank and block.settings.image_fallback != blank %}
             {{ block.settings.image_fallback | image_url: width: 2000 | image_tag: class: 'img-fallback', loading: 'lazy' }}
          {% endif %}
        </div>

        <div class="slide-overlay"></div>

        {% comment %} TEXT LAYER {% endcomment %}
        <div class="slide-content pos-{{ block.settings.text_position }}">
          <div class="content-wrapper">
            {% if block.settings.heading != blank %}
              <h2 class="slide-heading">{{ block.settings.heading }}</h2>
            {% endif %}
            {% if block.settings.subheading != blank %}
              <p class="slide-sub">{{ block.settings.subheading }}</p>
            {% endif %}
            {% if block.settings.button_label != blank %}
              <a href="{{ block.settings.button_link }}" class="slide-btn">{{ block.settings.button_label }}</a>
            {% endif %}
          </div>
        </div>

      </div>
    {% endfor %}
  </div>

  {% comment %} NAVIGATION DOTS {% endcomment %}
  {% if section.blocks.size > 1 %}
    <div class="carousel-dots">
      {% for block in section.blocks %}
        <button class="dot {% if forloop.first %}active{% endif %}" data-target="{{ forloop.index0 }}"></button>
      {% endfor %}
    </div>
  {% endif %}

</div>

<style>
  /* LAYOUT */
  .synapex-carousel-v4 {
    position: relative;
    width: 100%;
    height: var(--carousel-height);
    background: #000;
    overflow: hidden;
  }
  .carousel-track { width: 100%; height: 100%; position: relative; }
  
  .carousel-slide {
    position: absolute;
    inset: 0;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.6s ease-in-out;
    z-index: 1;
  }
  .carousel-slide.active { opacity: 1; visibility: visible; z-index: 2; }

  /* MEDIA */
  .slide-media, .vid-desktop, .vid-mobile, .img-fallback {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .vid-mobile { display: none; }
  
  @media(max-width: 768px) {
    .vid-desktop { display: none; }
    .vid-mobile { display: block; }
  }

  .slide-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0,0,0, var(--overlay));
    z-index: 2;
    pointer-events: none;
  }

  /* TEXT */
  .slide-content {
    position: absolute;
    inset: 0;
    z-index: 3;
    padding: 60px;
    display: flex;
    pointer-events: none;
  }
  .content-wrapper { pointer-events: auto; max-width: 700px; text-align: left; }

  /* POSITIONS */
  .pos-top-left      { align-items: flex-start; justify-content: flex-start; }
  .pos-top-center    { align-items: flex-start; justify-content: center; text-align: center; }
  .pos-top-right     { align-items: flex-start; justify-content: flex-end; text-align: right; }
  .pos-center-left   { align-items: center;     justify-content: flex-start; }
  .pos-center        { align-items: center;     justify-content: center; text-align: center; }
  .pos-center-right  { align-items: center;     justify-content: flex-end; text-align: right; }
  .pos-bottom-left   { align-items: flex-end;   justify-content: flex-start; }
  .pos-bottom-center { align-items: flex-end;   justify-content: center; text-align: center; }
  .pos-bottom-right  { align-items: flex-end;   justify-content: flex-end; text-align: right; }

  /* TYPOGRAPHY - NIKE STYLE */
  .slide-heading {
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    font-size: clamp(2.5rem, 6vw, 5.5rem);
    font-weight: 900;
    text-transform: uppercase;
    line-height: 0.9;
    color: #fff;
    margin: 0 0 15px 0;
    letter-spacing: -1px;
    text-shadow: 0 2px 10px rgba(0,0,0,0.3);
  }
  .slide-sub {
    font-size: clamp(1rem, 1.5vw, 1.25rem);
    font-weight: 500;
    color: #fff;
    margin: 0 0 25px 0;
    text-shadow: 0 2px 10px rgba(0,0,0,0.5);
  }
  .slide-btn {
    display: inline-block;
    padding: 14px 32px;
    background: #fff;
    color: #000;
    font-weight: 700;
    text-transform: uppercase;
    text-decoration: none;
    border-radius: 4px;
    transition: transform 0.2s ease;
  }
  .slide-btn:hover { transform: scale(1.05); }

  /* DOTS */
  .carousel-dots { position: absolute; bottom: 40px; right: 40px; z-index: 4; display: flex; gap: 12px; }
  .dot { width: 10px; height: 10px; border-radius: 50%; border: 1.5px solid #fff; background: transparent; cursor: pointer; padding: 0; transition: 0.3s; }
  .dot.active { background: #fff; transform: scale(1.2); }

  @media(max-width: 768px) {
    .slide-content { padding: 30px; }
    .carousel-dots { bottom: 20px; right: 20px; }
  }
</style>

<script>
  (function(){
    const root = document.getElementById('Carousel-{{ section.id }}');
    if(!root) return;
    
    const slides = root.querySelectorAll('.carousel-slide');
    const dots = root.querySelectorAll('.dot');
    let index = 0;
    let timer;
    const autoplay = root.dataset.autoplay === 'true';
    const speed = parseInt(root.dataset.speed) || 5000;

    function setSlide(i) {
      slides[index].classList.remove('active');
      if(dots[index]) dots[index].classList.remove('active');
      
      // Pause old video
      slides[index].querySelectorAll('video').forEach(v => v.pause());

      index = (i + slides.length) % slides.length;
      
      slides[index].classList.add('active');
      if(dots[index]) dots[index].classList.add('active');
      
      // Play new video
      slides[index].querySelectorAll('video').forEach(v => v.play().catch(()=>{}));
    }

    dots.forEach(dot => {
      dot.addEventListener('click', () => {
        setSlide(parseInt(dot.dataset.target));
        resetTimer();
      });
    });

    function startTimer() {
      if(!autoplay) return;
      timer = setInterval(() => setSlide(index + 1), speed);
    }
    
    function resetTimer() {
      clearInterval(timer);
      startTimer();
    }

    startTimer();
  })();
</script>

{% schema %}
{
  "name": "Synapex Carousel V4",
  "settings": [
    {
      "type": "select",
      "id": "section_height",
      "label": "Height",
      "options": [
        { "value": "100vh", "label": "Full Screen" },
        { "value": "80vh", "label": "Tall" },
        { "value": "600px", "label": "Fixed" }
      ],
      "default": "100vh"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay Opacity",
      "min": 0,
      "max": 90,
      "step": 10,
      "default": 30
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Autoplay",
      "default": true
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "label": "Speed (ms)",
      "min": 3000,
      "max": 10000,
      "step": 1000,
      "default": 5000
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Video Slide",
      "settings": [
        {
          "type": "url",
          "id": "video_desktop",
          "label": "Desktop Video URL"
        },
        {
          "type": "url",
          "id": "video_mobile",
          "label": "Mobile Video URL"
        },
        {
          "type": "image_picker",
          "id": "image_fallback",
          "label": "Fallback Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "UNCOMPROMISED"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading",
          "default": "The new standard."
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label",
          "default": "SHOP"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "select",
          "id": "text_position",
          "label": "Position",
          "options": [
            { "value": "top-left", "label": "Top Left" },
            { "value": "top-center", "label": "Top Center" },
            { "value": "top-right", "label": "Top Right" },
            { "value": "center-left", "label": "Center Left" },
            { "value": "center", "label": "Center" },
            { "value": "center-right", "label": "Center Right" },
            { "value": "bottom-left", "label": "Bottom Left" },
            { "value": "bottom-center", "label": "Bottom Center" },
            { "value": "bottom-right", "label": "Bottom Right" }
          ],
          "default": "bottom-left"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Synapex Carousel V4"
    }
  ]
}
{% endschema %}