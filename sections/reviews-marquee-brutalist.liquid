{% comment %}
  Customer Reviews Marquee Component - Brutalist Design
  Voices of the Unit section
{% endcomment %}

<section class="reviews-marquee-brutalist" data-section-id="{{ section.id }}">
  <div class="reviews-marquee-brutalist__container">
    <h2 class="reviews-marquee-brutalist__headline">
      {{ section.settings.headline }}
    </h2>

    <div class="reviews-marquee-brutalist__marquee">
      <div class="scrolling-content">
        <!-- First set of reviews -->
        <div class="review-unit">
          <span class="separator">≠</span>
          <span class="stars">★★★★★</span>
          <span class="name">{{ section.settings.review1_name }}</span>
          <span class="quote">– '{{ section.settings.review1_quote }}'</span>
        </div>
        
        <div class="review-unit">
          <span class="separator">≠</span>
          <span class="stars">★★★★★</span>
          <span class="name">{{ section.settings.review2_name }}</span>
          <span class="quote">– '{{ section.settings.review2_quote }}'</span>
        </div>
        
        <div class="review-unit">
          <span class="separator">≠</span>
          <span class="stars">★★★★★</span>
          <span class="name">{{ section.settings.review3_name }}</span>
          <span class="quote">– '{{ section.settings.review3_quote }}'</span>
        </div>
        
        <!-- Duplicate set for seamless loop -->
        <div class="review-unit">
          <span class="separator">≠</span>
          <span class="stars">★★★★★</span>
          <span class="name">{{ section.settings.review1_name }}</span>
          <span class="quote">– '{{ section.settings.review1_quote }}'</span>
        </div>
        
        <div class="review-unit">
          <span class="separator">≠</span>
          <span class="stars">★★★★★</span>
          <span class="name">{{ section.settings.review2_name }}</span>
          <span class="quote">– '{{ section.settings.review2_quote }}'</span>
        </div>
        
        <div class="review-unit">
          <span class="separator">≠</span>
          <span class="stars">★★★★★</span>
          <span class="name">{{ section.settings.review3_name }}</span>
          <span class="quote">– '{{ section.settings.review3_quote }}'</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* ============================================
     REVIEWS MARQUEE BRUTALIST COMPONENT
     Strict adherence to specifications
     ============================================ */

  .reviews-marquee-brutalist {
    background-color: #000000;
    padding: 60px 20px;
    width: 100%;
    overflow: hidden;
  }

  .reviews-marquee-brutalist__container {
    max-width: 100%;
    margin: 0 auto;
  }

  /* Main Headline */
  .reviews-marquee-brutalist__headline {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
    font-size: 2.5rem;
    font-weight: 900;
    color: #FFFFFF;
    text-align: center;
    margin: 0 0 40px 0;
    letter-spacing: 0.02em;
    text-transform: uppercase;
  }

  /* Marquee Container */
  .reviews-marquee-brutalist__marquee {
    overflow: hidden;
    height: 60px;
    width: 100%;
    position: relative;
    display: flex;
    align-items: center;
  }

  /* Scrolling Content */
  .scrolling-content {
    display: flex;
    white-space: nowrap;
    animation: scroll 40s linear infinite;
    will-change: transform;
  }

  /* Pause on hover */
  .reviews-marquee-brutalist__marquee:hover .scrolling-content {
    animation-play-state: paused;
  }

  /* Scroll Animation */
  @keyframes scroll {
    0% {
      transform: translateX(0%);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Individual Review Unit */
  .review-unit {
    display: flex;
    align-items: center;
    flex-shrink: 0;
  }

  /* Separator */
  .review-unit .separator {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: #FFFFFF;
    margin: 0 2rem;
  }

  /* Stars */
  .review-unit .stars {
    font-size: 1.2rem;
    color: #FFD700;
    margin-right: 1rem;
    letter-spacing: 0.1em;
  }

  /* Name */
  .review-unit .name {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
    font-size: 1rem;
    font-weight: 700;
    color: #FFFFFF;
    margin-right: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Quote */
  .review-unit .quote {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
    font-size: 0.95rem;
    font-weight: 400;
    color: #FFFFFF;
    opacity: 0.9;
    font-style: italic;
  }

  /* ============================================
     RESPONSIVE DESIGN
     Mobile breakpoint: 768px
     ============================================ */

  @media (max-width: 768px) {
    .reviews-marquee-brutalist {
      padding: 40px 16px;
    }

    .reviews-marquee-brutalist__headline {
      font-size: 1.75rem;
      margin-bottom: 30px;
    }

    .reviews-marquee-brutalist__marquee {
      height: 50px;
    }

    .review-unit .separator {
      font-size: 1.2rem;
      margin: 0 1rem;
    }

    .review-unit .stars {
      font-size: 1rem;
      margin-right: 0.75rem;
    }

    .review-unit .name {
      font-size: 0.85rem;
      margin-right: 0.75rem;
    }

    .review-unit .quote {
      font-size: 0.8rem;
    }
  }

  @media (max-width: 480px) {
    .reviews-marquee-brutalist__headline {
      font-size: 1.5rem;
    }

    .reviews-marquee-brutalist__marquee {
      height: 45px;
    }

    .review-unit .separator {
      margin: 0 0.75rem;
    }

    .review-unit .stars {
      font-size: 0.9rem;
      margin-right: 0.5rem;
    }

    .review-unit .name {
      font-size: 0.75rem;
      margin-right: 0.5rem;
    }

    .review-unit .quote {
      font-size: 0.7rem;
    }
  }
</style>

